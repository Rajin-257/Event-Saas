<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Event Management System</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= user.name %>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item active" href="/dashboard">Dashboard</a></li>
              <li><a class="dropdown-item" href="/users/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/tickets/my-tickets">My Tickets</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container mt-3">
    <% if(success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>

  <!-- Organizer Dashboard -->
  <div class="container py-4">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h1>Organizer Dashboard</h1>
        <p class="text-muted">Manage your events and track performance</p>
      </div>
      <div class="col-auto">
        <a href="/events/create" class="btn btn-primary">
          <i class="fas fa-plus-circle me-2"></i> Create New Event
        </a>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="my-events">-</div>
          <div class="stat-label">My Events</div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="active-events">-</div>
          <div class="stat-label">Active Events</div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="total-tickets">-</div>
          <div class="stat-label">Tickets Sold</div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="total-revenue">-</div>
          <div class="stat-label">Total Revenue</div>
        </div>
      </div>
    </div>

    <!-- My Events -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="dashboard-card">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">My Events</h4>
            <div>
              <a href="/events/create" class="btn btn-sm btn-success">
                <i class="fas fa-plus-circle me-1"></i> New Event
              </a>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Event</th>
                  <th>Date</th>
                  <th>Venue</th>
                  <th>Status</th>
                  <th>Tickets Sold</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <!-- This would be dynamically populated in a real implementation -->
                <tr>
                  <td>Tech Conference 2023</td>
                  <td>2023-08-15</td>
                  <td>Convention Center</td>
                  <td><span class="badge bg-success">Upcoming</span></td>
                  <td>125 / 200</td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <a href="/events/1" class="btn btn-info text-white">View</a>
                      <a href="/events/1/edit" class="btn btn-primary">Edit</a>
                      <a href="/events/1/tickets" class="btn btn-secondary">Tickets</a>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td>Music Festival</td>
                  <td>2023-09-20</td>
                  <td>City Park</td>
                  <td><span class="badge bg-warning">Draft</span></td>
                  <td>0 / 500</td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <a href="/events/2" class="btn btn-info text-white">View</a>
                      <a href="/events/2/edit" class="btn btn-primary">Edit</a>
                      <a href="/events/2/tickets" class="btn btn-secondary">Tickets</a>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td>Business Workshop</td>
                  <td>2023-07-05</td>
                  <td>Business Center</td>
                  <td><span class="badge bg-secondary">Completed</span></td>
                  <td>75 / 100</td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <a href="/events/3" class="btn btn-info text-white">View</a>
                      <a href="/events/3/edit" class="btn btn-primary">Edit</a>
                      <a href="/events/3/check-ins/3" class="btn btn-success">Check-ins</a>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Ticket Sales -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="dashboard-card">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Recent Ticket Sales</h4>
            <a href="/reports/sales" class="btn btn-sm btn-outline-primary">View Full Report</a>
          </div>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Ticket #</th>
                  <th>Event</th>
                  <th>Attendee</th>
                  <th>Type</th>
                  <th>Purchase Date</th>
                  <th>Amount</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <!-- This would be dynamically populated in a real implementation -->
                <tr>
                  <td>TKT-12345</td>
                  <td>Tech Conference 2023</td>
                  <td>John Smith</td>
                  <td>VIP</td>
