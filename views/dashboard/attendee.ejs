<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Event Management System</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= user.name %>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item active" href="/dashboard">Dashboard</a></li>
              <li><a class="dropdown-item" href="/users/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/tickets/my-tickets">My Tickets</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container mt-3">
    <% if(success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>

  <!-- Attendee Dashboard -->
  <div class="container py-4">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h1>Welcome, <%= user.name %>!</h1>
        <p class="text-muted">Manage your tickets and find exciting events</p>
      </div>
      <div class="col-auto">
        <a href="/events" class="btn btn-primary">
          <i class="fas fa-search me-2"></i> Browse Events
        </a>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="my-tickets">-</div>
          <div class="stat-label">My Tickets</div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="upcoming-events">-</div>
          <div class="stat-label">Upcoming Events</div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="total-spent">-</div>
          <div class="stat-label">Total Spent</div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="referral-earnings">-</div>
          <div class="stat-label">Referral Earnings</div>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="dashboard-card">
          <h4 class="mb-3">Quick Actions</h4>
          <div class="row g-3">
            <div class="col-md-3">
              <a href="/tickets/my-tickets" class="btn btn-info w-100 p-3 text-white">
                <i class="fas fa-ticket-alt me-2"></i> My Tickets
              </a>
            </div>
            <div class="col-md-3">
              <a href="/payments/wallet" class="btn btn-success w-100 p-3">
                <i class="fas fa-wallet me-2"></i> My Wallet
              </a>
            </div>
            <div class="col-md-3">
              <a href="/users/referrals" class="btn btn-primary w-100 p-3">
                <i class="fas fa-user-plus me-2"></i> My Referrals
              </a>
            </div>
            <div class="col-md-3">
              <a href="/users/profile" class="btn btn-secondary w-100 p-3">
                <i class="fas fa-user-cog me-2"></i> Edit Profile
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Upcoming Events -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="dashboard-card">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">My Upcoming Events</h4>
            <a href="/tickets/my-tickets" class="btn btn-sm btn-outline-primary">View All Tickets</a>
          </div>
          <div class="row">
            <!-- This would be dynamically populated in a real implementation -->
            <div class="col-md-4 mb-3">
              <div class="card h-100">
                <div class="card-img-top bg-info text-white d-flex align-items-center justify-content-center" style="height: 150px;">
                  <i class="fas fa-laptop-code fa-3x"></i>
                </div>
                <div class="card-body">
                  <h5 class="card-title">Tech Conference 2023</h5>
                  <p class="card-text"><i class="fas fa-calendar-alt me-2"></i> Aug 15, 2023</p>
                  <p class="card-text"><i class="fas fa-map-marker-alt me-2"></i> Convention Center</p>
                  <p class="card-text"><i class="fas fa-ticket-alt me-2"></i> VIP Pass</p>
                </div>
                <div class="card-footer">
                  <a href="/tickets/ticket/1" class="btn btn-primary">View Ticket</a>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card h-100">
                <div class="card-img-top bg-success text-white d-flex align-items-center justify-content-center" style="height: 150px;">
                  <i class="fas fa-music fa-3x"></i>
                </div>
                <div class="card-body">
                  <h5 class="card-title">Music Festival</h5>
                  <p class="card-text"><i class="fas fa-calendar-alt me-2"></i> Sep 20, 2023</p>
                  <p class="card-text"><i class="fas fa-map-marker-alt me-2"></i> City Park</p>
                  <p class="card-text"><i class="fas fa-ticket-alt me-2"></i> General Admission</p>
                </div>
                <div class="card-footer">
                  <a href="/tickets/ticket/2" class="btn btn-primary">View Ticket</a>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card h-100 d-flex flex-column justify-content-center align-items-center bg-light">
                <div class="text-center p-4">
                  <i class="fas fa-search fa-3x text-muted mb-3"></i>
                  <h5>Find More Events</h5>
                  <p class="text-muted">Discover exciting events happening near you</p>
                  <a href="/events" class="btn btn-outline-primary">Browse Events</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Referral Program -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="dashboard-card">
          <h4 class="mb-3">Referral Program</h4>
          <div class="row">
            <div class="col-md-8">
              <p>Share your referral link with friends and earn commissions when they purchase tickets.</p>
              <div class="input-group mb-3">
                <button class="btn btn-primary" type="button" id="copy-referral-link">
                  <i class="fas fa-copy me-2"></i> Copy
                </button>
              </div>
              <div class="mb-3">
                <p class="mb-1"><strong>Your Referral Code:</strong></p>
                <div class="coupon-code"><%= user.referralCode %></div>
              </div>
              <p class="mb-1"><strong>How it works:</strong></p>
              <ol>
                <li>Share your referral link with friends</li>
                <li>When they register and book tickets, you earn a 5% commission</li>
                <li>Commissions are added to your wallet once the payment is confirmed</li>
                <li>Request a payout when your balance reaches the minimum threshold</li>
              </ol>
            </div>
            <div class="col-md-4">
              <div class="card h-100">
                <div class="card-body text-center">
                  <h5 class="card-title">Referral Earnings</h5>
                  <div class="display-4 mb-3" id="wallet-balance">$0.00</div>
                  <p class="card-text">Current wallet balance from your referrals</p>
                  <a href="/payments/wallet" class="btn btn-primary">View Wallet</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recommended Events -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="dashboard-card">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Recommended Events</h4>
            <a href="/events" class="btn btn-sm btn-outline-primary">Browse All</a>
          </div>
          <div class="row">
            <!-- This would be dynamically populated in a real implementation -->
            <div class="col-md-4 mb-3">
              <div class="card h-100">
                <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 150px;">
                  <i class="fas fa-theater-masks fa-3x"></i>
                </div>
                <div class="card-body">
                  <h5 class="card-title">Theater Night</h5>
                  <p class="card-text"><i class="fas fa-calendar-alt me-2"></i> Aug 25, 2023</p>
                  <p class="card-text"><i class="fas fa-map-marker-alt me-2"></i> City Theater</p>
                  <p class="card-text"><i class="fas fa-dollar-sign me-2"></i> From $45.00</p>
                </div>
                <div class="card-footer">
                  <a href="/events/4" class="btn btn-primary">View Event</a>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card h-100">
                <div class="card-img-top bg-danger text-white d-flex align-items-center justify-content-center" style="height: 150px;">
                  <i class="fas fa-utensils fa-3x"></i>
                </div>
                <div class="card-body">
                  <h5 class="card-title">Food Festival</h5>
                  <p class="card-text"><i class="fas fa-calendar-alt me-2"></i> Sep 10, 2023</p>
                  <p class="card-text"><i class="fas fa-map-marker-alt me-2"></i> Downtown Square</p>
                  <p class="card-text"><i class="fas fa-dollar-sign me-2"></i> From $25.00</p>
                </div>
                <div class="card-footer">
                  <a href="/events/5" class="btn btn-primary">View Event</a>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="card h-100">
                <div class="card-img-top bg-primary text-white d-flex align-items-center justify-content-center" style="height: 150px;">
                  <i class="fas fa-running fa-3x"></i>
                </div>
                <div class="card-body">
                  <h5 class="card-title">City Marathon</h5>
                  <p class="card-text"><i class="fas fa-calendar-alt me-2"></i> Oct 05, 2023</p>
                  <p class="card-text"><i class="fas fa-map-marker-alt me-2"></i> City Center</p>
                  <p class="card-text"><i class="fas fa-dollar-sign me-2"></i> From $35.00</p>
                </div>
                <div class="card-footer">
                  <a href="/events/6" class="btn btn-primary">View Event</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white py-4 mt-auto">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h5>Event Management System</h5>
          <p>Find, book, and enjoy events with ease</p>
        </div>
        <div class="col-md-6 text-md-end">
          <p>&copy; 2023 Event Management System. All rights reserved.</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JS -->
  <script src="/js/main.js"></script>
  <script>
    // Fetch dashboard statistics
    document.addEventListener('DOMContentLoaded', function() {
      fetch('/reports/dashboard-stats')
        .then(response => response.json())
        .then(data => {
          document.getElementById('my-tickets').textContent = data.myTickets || 0;
          document.getElementById('upcoming-events').textContent = data.upcomingEvents || 0;
          document.getElementById('total-spent').textContent = '$' + (data.totalSpent || 0).toFixed(2);
          document.getElementById('referral-earnings').textContent = '$' + (data.referralEarnings || 0).toFixed(2);
          document.getElementById('wallet-balance').textContent = '$' + (data.referralEarnings || 0).toFixed(2);
        })
        .catch(error => console.error('Error fetching dashboard stats:', error));
    });
  </script>
</body>
</html>