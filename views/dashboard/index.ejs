<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Event Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .sidebar {
      min-height: calc(100vh - 56px);
      box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .dashboard-card {
      transition: transform 0.3s;
      border-left: 5px solid;
    }
    
    .dashboard-card:hover {
      transform: translateY(-5px);
    }
    
    .dashboard-card-events {
      border-left-color: #007bff;
    }
    
    .dashboard-card-tickets {
      border-left-color: #28a745;
    }
    
    .dashboard-card-guests {
      border-left-color: #fd7e14;
    }
    
    .dashboard-card-venues {
      border-left-color: #6f42c1;
    }
  </style>
</head>
<body class="bg-light">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">Event Management System</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <% if (user.Roles.some(role => role.name === 'admin' || role.name === 'organizer')) { %>
            <li class="nav-item">
              <a class="nav-link" href="/tickets/verify">Verify Tickets</a>
            </li>
          <% } %>
        </ul>
        <div class="d-flex">
          <div class="dropdown">
            <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle"></i> <%= user.first_name %>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/profile"><i class="bi bi-person"></i> My Profile</a></li>
              <li><a class="dropdown-item" href="/tickets/user"><i class="bi bi-ticket-perforated"></i> My Tickets</a></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <form action="/logout" method="POST">
                  <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right"></i> Logout</button>
                </form>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-lg-2 p-0 bg-white sidebar d-none d-lg-block">
        <div class="list-group list-group-flush">
          <a href="/dashboard" class="list-group-item list-group-item-action active">
            <i class="bi bi-speedometer2 me-2"></i> Dashboard
          </a>
          <a href="/events" class="list-group-item list-group-item-action">
            <i class="bi bi-calendar-event me-2"></i> Events
          </a>
          <a href="/tickets/user" class="list-group-item list-group-item-action">
            <i class="bi bi-ticket-perforated me-2"></i> My Tickets
          </a>
          
          <% if (user.Roles.some(role => role.name === 'admin' || role.name === 'organizer')) { %>
            <div class="list-group-item text-muted small py-2 bg-light">
              MANAGEMENT
            </div>
            <a href="/events/manage/create" class="list-group-item list-group-item-action">
              <i class="bi bi-plus-circle me-2"></i> Create Event
            </a>
            <a href="/tickets/verify" class="list-group-item list-group-item-action">
              <i class="bi bi-qr-code-scan me-2"></i> Verify Tickets
            </a>
            <a href="/guests" class="list-group-item list-group-item-action">
              <i class="bi bi-people me-2"></i> Guests
            </a>
            <a href="/venues" class="list-group-item list-group-item-action">
              <i class="bi bi-building me-2"></i> Venues
            </a>
          <% } %>
          
          <% if (user.Roles.some(role => role.name === 'admin')) { %>
            <div class="list-group-item text-muted small py-2 bg-light">
              ADMINISTRATION
            </div>
            <a href="/admin/users" class="list-group-item list-group-item-action">
              <i class="bi bi-people-fill me-2"></i> Users
            </a>
            <a href="/admin/departments" class="list-group-item list-group-item-action">
              <i class="bi bi-diagram-3 me-2"></i> Departments
            </a>
            <a href="/admin/payments" class="list-group-item list-group-item-action">
              <i class="bi bi-credit-card me-2"></i> Payments
            </a>
            <a href="/admin/settings" class="list-group-item list-group-item-action">
              <i class="bi bi-gear me-2"></i> Settings
            </a>
          <% } %>
        </div>
      </div>
      
      <!-- Main Content -->
      <div class="col-lg-10 col-md-12 px-4 py-4">
        <!-- Alert messages -->
        <% if(success_msg != '') { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        
        <% if(error_msg != '') { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        
        <h1 class="h3 mb-4">Dashboard</h1>
        
        <!-- Dashboard Cards -->
        <div class="row">
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card dashboard-card dashboard-card-events h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-muted">Upcoming Events</h6>
                    <h2 class="mb-0">5</h2>
                  </div>
                  <div class="bg-primary bg-opacity-10 p-3 rounded">
                    <i class="bi bi-calendar-event text-primary fs-1"></i>
                  </div>
                </div>
              </div>
              <div class="card-footer bg-transparent border-0">
                <a href="/events" class="text-decoration-none">View all events <i class="bi bi-arrow-right"></i></a>
              </div>
            </div>
          </div>
          
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card dashboard-card dashboard-card-tickets h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-muted">My Tickets</h6>
                    <h2 class="mb-0">3</h2>
                  </div>
                  <div class="bg-success bg-opacity-10 p-3 rounded">
                    <i class="bi bi-ticket-perforated text-success fs-1"></i>
                  </div>
                </div>
              </div>
              <div class="card-footer bg-transparent border-0">
                <a href="/tickets/user" class="text-decoration-none">View my tickets <i class="bi bi-arrow-right"></i></a>
              </div>
            </div>
          </div>
          
          <% if (user.Roles.some(role => role.name === 'admin' || role.name === 'organizer')) { %>
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card dashboard-card dashboard-card-guests h-100">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="text-muted">Guests</h6>
                      <h2 class="mb-0">12</h2>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded">
                      <i class="bi bi-people text-warning fs-1"></i>
                    </div>
                  </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                  <a href="/guests" class="text-decoration-none">Manage guests <i class="bi bi-arrow-right"></i></a>
                </div>
              </div>
            </div>
            
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card dashboard-card dashboard-card-venues h-100">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="text-muted">Venues</h6>
                      <h2 class="mb-0">8</h2>
                    </div>
                    <div class="bg-purple bg-opacity-10 p-3 rounded">
                      <i class="bi bi-building text-purple fs-1"></i>
                    </div>
                  </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                  <a href="/venues" class="text-decoration-none">Manage venues <i class="bi bi-arrow-right"></i></a>
                </div>
              </div>
            </div>
          <% } %>
        </div>
        
        <!-- Upcoming Events Section -->
        <div class="row mt-4">
          <div class="col-lg-8">
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Upcoming Events</h5>
                <a href="/events" class="btn btn-sm btn-primary">View All</a>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Venue</th>
                        <th>Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>Annual Tech Conference</td>
                        <td>Apr 25, 2023</td>
                        <td>Grand Convention Center</td>
                        <td><span class="badge bg-success">Published</span></td>
                      </tr>
                      <tr>
                        <td>Charity Gala Dinner</td>
                        <td>May 10, 2023</td>
                        <td>Royal Hotel Ballroom</td>
                        <td><span class="badge bg-success">Published</span></td>
                      </tr>
                      <tr>
                        <td>Product Launch</td>
                        <td>May 15, 2023</td>
                        <td>Innovation Hub</td>
                        <td><span class="badge bg-warning text-dark">Draft</span></td>
                      </tr>
                      <tr>
                        <td>Music Festival</td>
                        <td>Jun 5, 2023</td>
                        <td>City Park</td>
                        <td><span class="badge bg-success">Published</span></td>
                      </tr>
                      <tr>
                        <td>Corporate Retreat</td>
                        <td>Jun 20, 2023</td>
                        <td>Mountain Resort</td>
                        <td><span class="badge bg-warning text-dark">Draft</span></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-lg-4">
            <div class="card h-100">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Tickets</h5>
                <a href="/tickets/user" class="btn btn-sm btn-primary">View All</a>
              </div>
              <div class="card-body">
                <div class="list-group list-group-flush">
                  <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1">Annual Tech Conference</h6>
                      <span class="badge bg-success">Confirmed</span>
                    </div>
                    <p class="mb-1 text-muted small">Apr 25, 2023 • VIP Access</p>
                  </a>
                  <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1">Charity Gala Dinner</h6>
                      <span class="badge bg-warning text-dark">Pending</span>
                    </div>
                    <p class="mb-1 text-muted small">May 10, 2023 • Standard Entry</p>
                  </a>
                  <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1">Music Festival</h6>
                      <span class="badge bg-success">Confirmed</span>
                    </div>
                    <p class="mb-1 text-muted small">Jun 5, 2023 • Weekend Pass</p>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <% if (user.Roles.some(role => role.name === 'admin' || role.name === 'organizer')) { %>
          <!-- Quick Actions Section -->
          <div class="row mt-4">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-3 col-sm-6 mb-3">
                      <a href="/events/manage/create" class="btn btn-outline-primary w-100 p-4 h-100">
                        <i class="bi bi-calendar-plus fs-2 d-block mb-2"></i>
                        Create Event
                      </a>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                      <a href="/guests/create" class="btn btn-outline-success w-100 p-4 h-100">
                        <i class="bi bi-person-plus fs-2 d-block mb-2"></i>
                        Add Guest
                      </a>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                      <a href="/venues/create" class="btn btn-outline-warning w-100 p-4 h-100">
                        <i class="bi bi-building-add fs-2 d-block mb-2"></i>
                        Add Venue
                      </a>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                      <a href="/tickets/verify" class="btn btn-outline-info w-100 p-4 h-100">
                        <i class="bi bi-qr-code-scan fs-2 d-block mb-2"></i>
                        Verify Tickets
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>