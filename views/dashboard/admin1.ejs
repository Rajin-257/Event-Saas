<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Event Management System</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= user.name %>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item active" href="/dashboard">Dashboard</a></li>
              <li><a class="dropdown-item" href="/users/profile">Profile</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container mt-3">
    <% if(success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>

  <!-- Admin Dashboard -->
  <div class="container py-4">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h1>Admin Dashboard</h1>
        <p class="text-muted">Manage the entire event system</p>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="total-events">-</div>
          <div class="stat-label">Total Events</div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="total-users">-</div>
          <div class="stat-label">Registered Users</div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="total-tickets">-</div>
          <div class="stat-label">Tickets Sold</div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="stat-card">
          <div class="stat-value" id="total-revenue">-</div>
          <div class="stat-label">Total Revenue</div>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="dashboard-card">
          <h4 class="mb-3">Quick Actions</h4>
          <div class="row g-3">
            <div class="col-md-3">
              <a href="/admin/users" class="btn btn-primary w-100 p-3">
                <i class="fas fa-users me-2"></i> Manage Users
              </a>
            </div>
            <div class="col-md-3">
              <a href="/events/create" class="btn btn-success w-100 p-3">
                <i class="fas fa-plus-circle me-2"></i> Create Event
              </a>
            </div>
            <div class="col-md-3">
              <a href="/reports/sales" class="btn btn-info w-100 p-3 text-white">
                <i class="fas fa-chart-line me-2"></i> Sales Reports
              </a>
            </div>
            <div class="col-md-3">
              <a href="/payments/payment-config" class="btn btn-secondary w-100 p-3">
                <i class="fas fa-cog me-2"></i> System Settings
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="row mb-4">
      <div class="col-md-6 mb-3">
        <div class="dashboard-card h-100">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Recent Events</h4>
            <a href="/events" class="btn btn-sm btn-outline-primary">View All</a>
          </div>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Event</th>
                  <th>Date</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <!-- This would be dynamically populated in a real implementation -->
                <tr>
                  <td>Tech Conference 2023</td>
                  <td>2023-08-15</td>
                  <td><span class="badge bg-success">Upcoming</span></td>
                  <td>
                    <a href="/events/1" class="btn btn-sm btn-info text-white">View</a>
                  </td>
                </tr>
                <tr>
                  <td>Music Festival</td>
                  <td>2023-09-20</td>
                  <td><span class="badge bg-warning">Draft</span></td>
                  <td>
                    <a href="/events/2" class="btn btn-sm btn-info text-white">View</a>
                  </td>
                </tr>
                <tr>
                  <td>Business Workshop</td>
                  <td>2023-07-05</td>
                  <td><span class="badge bg-secondary">Completed</span></td>
                  <td>
                    <a href="/events/3" class="btn btn-sm btn-info text-white">View</a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-3">
        <div class="dashboard-card h-100">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Recent Payments</h4>
            <a href="/payments/history" class="btn btn-sm btn-outline-primary">View All</a>
          </div>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Invoice</th>
                  <th>Amount</th>
                  <th>Date</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <!-- This would be dynamically populated in a real implementation -->
                <tr>
                  <td>INV-A12345</td>
                  <td>$99.00</td>
                  <td>2023-07-01</td>
                  <td><span class="badge bg-success">Completed</span></td>
                </tr>
                <tr>
                  <td>INV-B67890</td>
                  <td>$149.00</td>
                  <td>2023-07-02</td>
                  <td><span class="badge bg-success">Completed</span></td>
                </tr>
                <tr>
                  <td>INV-C13579</td>
                  <td>$79.00</td>
                  <td>2023-07-03</td>
                  <td><span class="badge bg-warning">Pending</span></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Payout Requests -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="dashboard-card">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Pending Payout Requests</h4>
            <a href="/payments/payout-requests" class="btn btn-sm btn-outline-primary">View All</a>
          </div>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>User</th>
                  <th>Amount</th>
                  <th>Payment Method</th>
                  <th>Requested</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <!-- This would be dynamically populated in a real implementation -->
                <tr>
                  <td>John Smith</td>
                  <td>$120.00</td>
                  <td>Bank Transfer</td>
                  <td>2023-07-01</td>
                  <td>
                    <a href="/payments/payout/1/process" class="btn btn-sm btn-success">Process</a>
                  </td>
                </tr>
                <tr>
                  <td>Emily Johnson</td>
                  <td>$85.50</td>
                  <td>PayPal</td>
                  <td>2023-07-02</td>
                  <td>
                    <a href="/payments/payout/2/process" class="btn btn-sm btn-success">Process</a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white py-4 mt-auto">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h5>Event Management System</h5>
          <p>Manage your events with ease</p>
        </div>
        <div class="col-md-6 text-md-end">
          <p>&copy; 2023 Event Management System. All rights reserved.</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JS -->
  <script src="/js/main.js"></script>
  <script>
    // Fetch dashboard statistics
    document.addEventListener('DOMContentLoaded', function() {
      fetch('/reports/dashboard-stats')
        .then(response => response.json())
        .then(data => {
          document.getElementById('total-events').textContent = data.totalEvents || 0;
          document.getElementById('total-users').textContent = data.totalUsers || 0;
          document.getElementById('total-tickets').textContent = data.totalTickets || 0;
          document.getElementById('total-revenue').textContent = '$' + (data.totalRevenue || 0).toFixed(2);
        })
        .catch(error => console.error('Error fetching dashboard stats:', error));
    });
  </script>
</body>
</html>