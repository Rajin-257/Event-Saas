<%- include('../partials/header') %>

<div class="row mb-4">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex align-items-center">
          <% if (user.avatar) { %>
            <img src="<%= user.avatar %>" alt="Avatar" class="avatar-lg me-4 rounded-circle">
          <% } else { %>
            <div class="avatar-lg me-4 rounded-circle bg-primary d-flex align-items-center justify-content-center">
              <span class="text-white fs-1"><%= user.name.charAt(0).toUpperCase() %></span>
            </div>
          <% } %>
          <div>
            <h2 class="mb-1">Welcome, <%= user.name %>!</h2>
            <p class="text-muted mb-0">
              <i class="fas fa-envelope me-2"></i><%= user.email %>
              <% if (user.mobile) { %>
                <span class="mx-2">|</span>
                <i class="fas fa-phone me-2"></i><%= user.mobile %>
              <% } %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100">
      <div class="card-body text-center">
        <i class="fas fa-user-circle fa-3x text-primary mb-3"></i>
        <h5 class="card-title">My Profile</h5>
        <p class="card-text">View and update your personal information and avatar</p>
        <a href="/user/profile" class="btn btn-primary">Manage Profile</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100">
      <div class="card-body text-center">
        <i class="fas fa-key fa-3x text-primary mb-3"></i>
        <h5 class="card-title">Security</h5>
        <p class="card-text">Change your password and manage security settings</p>
        <a href="/user/change-password" class="btn btn-primary">Change Password</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-4">
    <div class="card shadow-sm h-100">
      <div class="card-body text-center">
        <i class="fas fa-history fa-3x text-primary mb-3"></i>
        <h5 class="card-title">Account Activity</h5>
        <p class="card-text">Last login: <%= user.last_login_data ? new Date(user.last_login_data).toLocaleString() : 'Not available' %></p>
        <p class="card-text">Account created: <%= new Date(user.createdAt).toLocaleDateString() %></p>
      </div>
    </div>
  </div>
</div>

<style>
  .avatar-lg {
    width: 80px;
    height: 80px;
  }
</style>

<%- include('../partials/footer') %>