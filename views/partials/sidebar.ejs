<!-- Sidebar -->
<div class="col-lg-2 p-0 bg-white sidebar d-none d-lg-block">
    <div class="list-group list-group-flush">
      <a href="/dashboard" class="list-group-item list-group-item-action <%= title === 'Dashboard' ? 'active' : '' %>">
        <i class="bi bi-speedometer2 me-2"></i> Dashboard
      </a>
      <a href="/events" class="list-group-item list-group-item-action <%= title === 'Events' ? 'active' : '' %>">
        <i class="bi bi-calendar-event me-2"></i> Events
      </a>
      <a href="/tickets/user" class="list-group-item list-group-item-action <%= title === 'My Tickets' ? 'active' : '' %>">
        <i class="bi bi-ticket-perforated me-2"></i> My Tickets
      </a>
      
      <% if (user.Roles && user.Roles.some(role => role.name === 'admin' || role.name === 'organizer')) { %>
        <div class="list-group-item text-muted small py-2 bg-light">
          MANAGEMENT
        </div>
        <a href="/events/manage/create" class="list-group-item list-group-item-action <%= title === 'Create Event' ? 'active' : '' %>">
          <i class="bi bi-plus-circle me-2"></i> Create Event
        </a>
        <a href="/tickets/verify" class="list-group-item list-group-item-action <%= title === 'Verify Ticket' ? 'active' : '' %>">
          <i class="bi bi-qr-code-scan me-2"></i> Verify Tickets
        </a>
        <a href="/guests" class="list-group-item list-group-item-action <%= title === 'Guests' ? 'active' : '' %>">
          <i class="bi bi-people me-2"></i> Guests
        </a>
        <a href="/venues" class="list-group-item list-group-item-action <%= title === 'Venues' ? 'active' : '' %>">
          <i class="bi bi-building me-2"></i> Venues
        </a>
      <% } %>
      
      <% if (user.Roles && user.Roles.some(role => role.name === 'admin')) { %>
        <div class="list-group-item text-muted small py-2 bg-light">
          ADMINISTRATION
        </div>
        <a href="/admin/users" class="list-group-item list-group-item-action <%= title === 'Users Management' ? 'active' : '' %>">
          <i class="bi bi-people-fill me-2"></i> Users
        </a>
        <a href="/admin/departments" class="list-group-item list-group-item-action <%= title === 'Departments' ? 'active' : '' %>">
          <i class="bi bi-diagram-3 me-2"></i> Departments
        </a>
        <a href="/admin/payments" class="list-group-item list-group-item-action <%= title === 'Payments' ? 'active' : '' %>">
          <i class="bi bi-credit-card me-2"></i> Payments
        </a>
        <a href="/admin/settings" class="list-group-item list-group-item-action <%= title === 'Settings' ? 'active' : '' %>">
          <i class="bi bi-gear me-2"></i> Settings
        </a>
      <% } %>
    </div>
  </div>