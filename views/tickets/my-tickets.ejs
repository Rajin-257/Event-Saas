<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Event Management System</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= user.name %>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/dashboard">Dashboard</a></li>
              <li><a class="dropdown-item" href="/users/profile">Profile</a></li>
              <li><a class="dropdown-item active" href="/tickets/my-tickets">My Tickets</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container mt-3">
    <% if(success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>

  <!-- My Tickets -->
  <div class="container py-4">
    <div class="row align-items-center mb-4">
      <div class="col">
        <h1>My Tickets</h1>
        <p class="text-muted">Manage your event tickets</p>
      </div>
      <div class="col-auto">
        <a href="/events" class="btn btn-primary">
          <i class="fas fa-search me-2"></i> Browse Events
        </a>
      </div>
    </div>

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-4">
      <li class="nav-item">
        <a class="nav-link active" id="all-tab" data-bs-toggle="tab" href="#all">All Tickets</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="upcoming-tab" data-bs-toggle="tab" href="#upcoming">Upcoming</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="past-tab" data-bs-toggle="tab" href="#past">Past</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="cancelled-tab" data-bs-toggle="tab" href="#cancelled">Cancelled</a>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content">
      <!-- All Tickets Tab -->
      <div class="tab-pane fade show active" id="all">
        <% if (tickets && tickets.length > 0) { %>
          <div class="row">
            <% tickets.forEach(ticket => { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                  <div class="card-header">
                    <span class="badge bg-<%= 
                      ticket.status === 'confirmed' ? 'success' : 
                      ticket.status === 'booked' ? 'warning' : 
                      ticket.status === 'cancelled' || ticket.status === 'refunded' ? 'danger' : 
                      ticket.status === 'used' ? 'secondary' : 'info' 
                    %> float-end"><%= ticket.status %></span>
                    <h5 class="mb-0"><%= ticket.event.title %></h5>
                  </div>
                  <div class="card-body">
                    <p><i class="fas fa-calendar-alt me-2"></i> <%= new Date(ticket.event.startDate).toLocaleDateString() %></p>
                    <p><i class="fas fa-clock me-2"></i> <%= new Date(ticket.event.startDate).toLocaleTimeString() %></p>
                    <p><i class="fas fa-map-marker-alt me-2"></i> <%= ticket.event.venue %></p>
                    <p><i class="fas fa-ticket-alt me-2"></i> <%= ticket.ticketType.name %></p>
                    <p><i class="fas fa-hashtag me-2"></i> <%= ticket.ticketNumber %></p>
                  </div>
                  <div class="card-footer d-grid">
                    <a href="/tickets/ticket/<%= ticket.id %>" class="btn btn-primary">View Ticket</a>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="alert alert-info">
            <p class="mb-0">You don't have any tickets yet. <a href="/events">Browse events</a> to find something you like!</p>
          </div>
        <% } %>
      </div>

      <!-- Upcoming Tickets Tab -->
      <div class="tab-pane fade" id="upcoming">
        <% 
          const upcomingTickets = tickets.filter(ticket => 
            new Date(ticket.event.startDate) > new Date() && 
            (ticket.status === 'confirmed' || ticket.status === 'booked')
          );
        %>
        
        <% if (upcomingTickets && upcomingTickets.length > 0) { %>
          <div class="row">
            <% upcomingTickets.forEach(ticket => { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                  <div class="card-header">
                    <span class="badge bg-<%= 
                      ticket.status === 'confirmed' ? 'success' : 
                      ticket.status === 'booked' ? 'warning' : 'info' 
                    %> float-end"><%= ticket.status %></span>
                    <h5 class="mb-0"><%= ticket.event.title %></h5>
                  </div>
                  <div class="card-body">
                    <p><i class="fas fa-calendar-alt me-2"></i> <%= new Date(ticket.event.startDate).toLocaleDateString() %></p>
                    <p><i class="fas fa-clock me-2"></i> <%= new Date(ticket.event.startDate).toLocaleTimeString() %></p>
                    <p><i class="fas fa-map-marker-alt me-2"></i> <%= ticket.event.venue %></p>
                    <p><i class="fas fa-ticket-alt me-2"></i> <%= ticket.ticketType.name %></p>
                    <p><i class="fas fa-hashtag me-2"></i> <%= ticket.ticketNumber %></p>
                  </div>
                  <div class="card-footer d-grid">
                    <a href="/tickets/ticket/<%= ticket.id %>" class="btn btn-primary">View Ticket</a>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="alert alert-info">
            <p class="mb-0">You don't have any upcoming tickets. <a href="/events">Browse events</a> to find something you like!</p>
          </div>
        <% } %>
      </div>

      <!-- Past Tickets Tab -->
      <div class="tab-pane fade" id="past">
        <% 
          const pastTickets = tickets.filter(ticket => 
            new Date(ticket.event.startDate) < new Date() && 
            ticket.status !== 'cancelled' && ticket.status !== 'refunded'
          );
        %>
        
        <% if (pastTickets && pastTickets.length > 0) { %>
          <div class="row">
            <% pastTickets.forEach(ticket => { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                  <div class="card-header">
                    <span class="badge bg-<%= 
                      ticket.status === 'used' ? 'secondary' : 'info' 
                    %> float-end"><%= ticket.status %></span>
                    <h5 class="mb-0"><%= ticket.event.title %></h5>
                  </div>
                  <div class="card-body">
                    <p><i class="fas fa-calendar-alt me-2"></i> <%= new Date(ticket.event.startDate).toLocaleDateString() %></p>
                    <p><i class="fas fa-clock me-2"></i> <%= new Date(ticket.event.startDate).toLocaleTimeString() %></p>
                    <p><i class="fas fa-map-marker-alt me-2"></i> <%= ticket.event.venue %></p>
                    <p><i class="fas fa-ticket-alt me-2"></i> <%= ticket.ticketType.name %></p>
                    <p><i class="fas fa-hashtag me-2"></i> <%= ticket.ticketNumber %></p>
                  </div>
                  <div class="card-footer d-grid">
                    <a href="/tickets/ticket/<%= ticket.id %>" class="btn btn-primary">View Ticket</a>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="alert alert-info">
            <p class="mb-0">You don't have any past tickets.</p>
          </div>
        <% } %>
      </div>

      <!-- Cancelled Tickets Tab -->
      <div class="tab-pane fade" id="cancelled">
        <% 
          const cancelledTickets = tickets.filter(ticket => 
            ticket.status === 'cancelled' || ticket.status === 'refunded'
          );
        %>
        
        <% if (cancelledTickets && cancelledTickets.length > 0) { %>
          <div class="row">
            <% cancelledTickets.forEach(ticket => { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                  <div class="card-header">
                    <span class="badge bg-danger float-end"><%= ticket.status %></span>
                    <h5 class="mb-0"><%= ticket.event.title %></h5>
                  </div>
                  <div class="card-body">
                    <p><i class="fas fa-calendar-alt me-2"></i> <%= new Date(ticket.event.startDate).toLocaleDateString() %></p>
                    <p><i class="fas fa-clock me-2"></i> <%= new Date(ticket.event.startDate).toLocaleTimeString() %></p>
                    <p><i class="fas fa-map-marker-alt me-2"></i> <%= ticket.event.venue %></p>
                    <p><i class="fas fa-ticket-alt me-2"></i> <%= ticket.ticketType.name %></p>
                    <p><i class="fas fa-hashtag me-2"></i> <%= ticket.ticketNumber %></p>
                  </div>
                  <div class="card-footer d-grid">
                    <a href="/tickets/ticket/<%= ticket.id %>" class="btn btn-primary">View Ticket</a>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="alert alert-info">
            <p class="mb-0">You don't have any cancelled tickets.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white py-4 mt-auto">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h5>Event Management System</h5>
          <p>Find, book, and enjoy events with ease</p>
        </div>
        <div class="col-md-6 text-md-end">
          <p>&copy; 2023 Event Management System. All rights reserved.</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JS -->
  <script src="/js/main.js"></script>
</body>
</html>