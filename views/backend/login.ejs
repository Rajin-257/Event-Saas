<%- include('./partials/html.ejs') %>

<head>
    <%- include("./partials/title-meta.ejs", {title: "Log In"}) %>

    <%- include('./partials/head-css.ejs') %>
</head>

<body class="">

    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center mb-4 mt-3">
                                <a href="/" class="logo p-0 lh-base">
                                    <span class="logo-dark"><img src="/static/backend/images/logo-dark.png" alt="" height="30"></span>
                                    <span class="logo-light"><img src="/static/backend/images/logo-light.png" alt="" height="30"></span>
                                </a>
                            </div>
                            <form action="/login" method="POST" class="mt-3 p-2">
                                <div class="form-group">
                                    <label for="emailaddress">Email address</label>
                                    <input class="form-control" type="email" id="emailaddress" name="email" required placeholder="john@deo.com">
                                </div>
                                <div class="form-group">
                                    <a href="/auth/recoverpw" class="text-muted float-end">Forgot your password?</a>
                                    <label for="password">Password</label>
                                    <input class="form-control" type="password" required id="password" name="password" placeholder="Enter your password">
                                </div>

                                <div class="form-group mb-4 pb-3">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="checkbox-signin" name="remember">
                                        <label class="form-check-label" for="checkbox-signin">Remember me</label>
                                    </div>
                                </div>
                                <div class="mb-3 text-center">
                                    <button class="btn btn-primary w-100" type="submit"> Sign In </button>
                                </div>
                            </form>
                        </div>
                        <!-- end card-body -->
                    </div>
                    <!-- end card -->
                    <div class="row mt-4">
                        <div class="col-sm-12 text-center">
                            <p class="text-muted mb-0">Don't have an account? <a href="auth-register.ejs" class="text-dark ms-1"><b>Sign Up</b></a></p>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <%- include('./partials/footer-scripts.ejs') %>

</body>

</html>