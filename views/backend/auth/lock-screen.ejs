<%- include('../partials/html.ejs') %>

<head>
    <%- include("../partials/title-meta.ejs", {title: "Lock Screen"}) %>

    <%- include('../partials/head-css.ejs') %>
</head>


<body>
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center mb-4 mt-3">
                                <a href="/" class="logo p-0">
                                    <span class="logo-dark"><img src="/backend/images/logo-dark.png" alt="" height="30"></span>
                                    <span class="logo-light"><img src="/backend/images/logo-light.png" alt="" height="30"></span>
                                </a>
                                <div class="mt-4 pt-1">
                                    <img src="/backend/images/users/avatar-4.jpg" class="rounded-circle img-thumbnail" alt="thumbnail" style="height:88px;">
                                </div>
                                <p class="text-muted mb-0 font-13 mt-3">Enter your password to access the panel. </p>
                            </div>
                            <form action="mt-3" class="p-2">
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input class="form-control" type="password" required="" id="password" placeholder="Enter your password">
                                </div>
                                <div class="mb-3 text-center">
                                    <button class="btn btn-primary w-100" type="submit"> Unlock </button>
                                </div>
                            </form>
                        </div>
                        <!-- end card-body -->
                    </div>
                    <!-- end card -->
                    <div class="row mt-4">
                        <div class="col-sm-12 text-center">
                            <p class="text-muted mb-0">Not you? return <a href="/auth/login" class="text-dark ms-1"><b>Sign In</b></a></p>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <%- include('../partials/footer-scripts.ejs') %>

</body>

</html>