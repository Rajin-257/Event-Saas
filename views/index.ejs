<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Event Management System</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <% if (user) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= user.name %>
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/dashboard">Dashboard</a></li>
                <li><a class="dropdown-item" href="/users/profile">Profile</a></li>
                <li><a class="dropdown-item" href="/tickets/my-tickets">My Tickets</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container mt-3">
    <% if(success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error_msg && error_msg.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if(error && error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>

  <!-- Hero Section -->
  <section class="hero py-5 text-center bg-light">
    <div class="container py-5">
      <h1 class="display-4 fw-bold">Find and Book Amazing Events</h1>
      <p class="lead mb-4">Discover concerts, workshops, seminars, and more events in your area</p>
      <div class="d-flex justify-content-center">
        <a href="/events" class="btn btn-primary btn-lg me-2">Browse Events</a>
        <% if (!user) { %>
          <a href="/register" class="btn btn-outline-secondary btn-lg">Sign Up</a>
        <% } %>
      </div>
    </div>
  </section>

  <!-- Featured Events -->
  <section class="featured-events py-5">
    <div class="container">
      <h2 class="text-center mb-4">Featured Events</h2>
      <div class="row">
        <!-- Event cards will be dynamically populated -->
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
              <i class="fas fa-music fa-3x"></i>
            </div>
            <div class="card-body">
              <h5 class="card-title">Summer Music Festival</h5>
              <p class="card-text">Experience the best music with amazing artists and bands.</p>
              <p><i class="fas fa-calendar-alt"></i> Jul 15, 2023</p>
              <p><i class="fas fa-map-marker-alt"></i> Central Park</p>
            </div>
            <div class="card-footer">
              <a href="/events/1" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-img-top bg-info text-white d-flex align-items-center justify-content-center" style="height: 200px;">
              <i class="fas fa-laptop-code fa-3x"></i>
            </div>
            <div class="card-body">
              <h5 class="card-title">Web Development Workshop</h5>
              <p class="card-text">Learn modern web development techniques from industry experts.</p>
              <p><i class="fas fa-calendar-alt"></i> Aug 5, 2023</p>
              <p><i class="fas fa-map-marker-alt"></i> Tech Hub</p>
            </div>
            <div class="card-footer">
              <a href="/events/2" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-img-top bg-success text-white d-flex align-items-center justify-content-center" style="height: 200px;">
              <i class="fas fa-chalkboard-teacher fa-3x"></i>
            </div>
            <div class="card-body">
              <h5 class="card-title">Business Leadership Summit</h5>
              <p class="card-text">Connect with industry leaders and learn effective business strategies.</p>
              <p><i class="fas fa-calendar-alt"></i> Sep 12, 2023</p>
              <p><i class="fas fa-map-marker-alt"></i> Convention Center</p>
            </div>
            <div class="card-footer">
              <a href="/events/3" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center mt-4">
        <a href="/events" class="btn btn-outline-primary">View All Events</a>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="how-it-works py-5 bg-light">
    <div class="container">
      <h2 class="text-center mb-5">How It Works</h2>
      <div class="row g-4">
        <div class="col-md-4 text-center">
          <div class="p-3">
            <div class="icon-wrapper mb-3">
              <i class="fas fa-search fa-3x text-primary"></i>
            </div>
            <h4>Find Events</h4>
            <p>Browse through our catalog of events and find what interests you</p>
          </div>
        </div>
        <div class="col-md-4 text-center">
          <div class="p-3">
            <div class="icon-wrapper mb-3">
              <i class="fas fa-ticket-alt fa-3x text-primary"></i>
            </div>
            <h4>Book Tickets</h4>
            <p>Select your preferred tickets and complete the booking process</p>
          </div>
        </div>
        <div class="col-md-4 text-center">
          <div class="p-3">
            <div class="icon-wrapper mb-3">
              <i class="fas fa-qrcode fa-3x text-primary"></i>
            </div>
            <h4>Attend Event</h4>
            <p>Get your e-ticket with QR code and attend the event hassle-free</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Organizer Call to Action -->
  <section class="cta py-5 bg-primary text-white text-center">
    <div class="container">
      <h2 class="mb-3">Are you an event organizer?</h2>
      <p class="lead mb-4">Create and manage your events with our platform. Gain access to powerful tools for ticketing, promotions, and more.</p>
      <a href="/register?role=organizer" class="btn btn-light btn-lg">Get Started as Organizer</a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-dark text-white py-4">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h5>Event Management System</h5>
          <p>Find, book, and manage events with ease.</p>
        </div>
        <div class="col-md-4">
          <h5>Quick Links</h5>
          <ul class="list-unstyled">
            <li><a href="/" class="text-white">Home</a></li>
            <li><a href="/events" class="text-white">Events</a></li>
            <li><a href="/login" class="text-white">Login</a></li>
            <li><a href="/register" class="text-white">Register</a></li>
          </ul>
        </div>
        <div class="col-md-4">
          <h5>Contact Us</h5>
          <address class="mb-0">
            <p><i class="fas fa-map-marker-alt me-2"></i> 123 Event Street, City</p>
            <p><i class="fas fa-phone me-2"></i> (123) 456-7890</p>
            <p><i class="fas fa-envelope me-2"></i> info@eventmanagementsystem.com</p>
          </address>
        </div>
      </div>
      <hr>
      <div class="text-center">
        <p class="mb-0">&copy; 2023 Event Management System. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JS -->
  <script src="/js/main.js"></script>
</body>
</html>