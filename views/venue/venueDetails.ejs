<!-- Custom JS for venue Table -->
<script>
$(document).ready(function() {
    // Initialize DataTable
    $('#venues-datatable').DataTable({
        responsive: true,
        lengthChange: true,
        language: {
            paginate: {
                previous: '<i class="mdi mdi-chevron-left">',
                next: '<i class="mdi mdi-chevron-right">'
            }
        },
        columnDefs: [
            { responsivePriority: 1, targets: 1 }, // Name column
            { responsivePriority: 2, targets: 10 }  // Actions column
        ]
    });
    
    // Add Event Listener for the Add venue button
    $('#venueCreate').on('click', function() {
        $('#venue-modal').modal('show');
    });

    // Event listener for update modal
    $(document).on('click', '#update-modal', function() {
        const venueId = $(this).data('venue-id');
        const name = $(this).data('venue-name');
        const address = $(this).data('venue-address');
        const city = $(this).data('venue-city');
        const capacity = $(this).data('venue-capacity');
        const description = $(this).data('venue-description');
        const contactPerson = $(this).data('venue-contact-person');
        const contactEmail = $(this).data('venue-contact-email');
        const contactPhone = $(this).data('venue-contact-phone');
        
        $('#update-venueId').val(venueId);
        $('#update-name').val(name);
        $('#update-address').val(address);
        $('#update-city').val(city);
        $('#update-capacity').val(capacity);
        $('#update-description').val(description);
        $('#update-contact_person').val(contactPerson);
        $('#update-contact_email').val(contactEmail);
        $('#update-contact_phone').val(contactPhone);
        
        $('#update-venue-modal').modal('show');
    });
    
    // Event listener for delete button
    $(document).on('click', '#venue-del', function() {
        const venueId = $(this).data('venue-id');
        $('#delete-modal input[name="id"]').val(venueId);
        $('#delete-modal').modal('show');
    });

    // Real-time form validation for create form
    const createForm = document.getElementById('venue-form');
    const nameInput = document.getElementById('name');
    const addressInput = document.getElementById('address');
    const cityInput = document.getElementById('city');
    const capacityInput = document.getElementById('capacity');
    const contactEmailInput = document.getElementById('contact_email');

    // Real-time validation for venue name
    nameInput.addEventListener('input', function() {
        if (this.value.trim() === '') {
            this.classList.add('is-invalid');
            this.classList.remove('is-valid');
        } else {
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
        }
    });

    // Real-time validation for address
    addressInput.addEventListener('input', function() {
        if (this.value.trim() === '') {
            this.classList.add('is-invalid');
            this.classList.remove('is-valid');
        } else {
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
        }
    });

    // Real-time validation for city
    cityInput.addEventListener('input', function() {
        if (this.value.trim() === '') {
            this.classList.add('is-invalid');
            this.classList.remove('is-valid');
        } else {
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
        }
    });
    
    // Real-time validation for capacity
    capacityInput.addEventListener('input', function() {
        if (this.value <= 0 || this.value === '') {
            this.classList.add('is-invalid');
            this.classList.remove('is-valid');
        } else {
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
        }
    });

    // Real-time validation for email (only if provided)
    contactEmailInput.addEventListener('input', function() {
        if (this.value.trim() !== '') {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(this.value)) {
                this.classList.add('is-invalid');
                this.classList.remove('is-valid');
            } else {
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            }
        } else {
            this.classList.remove('is-invalid');
            this.classList.remove('is-valid');
        }
    });

    // Form submission validation for create form
    createForm.addEventListener('submit', function(event) {
        if (!createForm.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        
        createForm.classList.add('was-validated');
    });
    
    // Real-time form validation for update form
    const updateForm = document.getElementById('venue-update-form');
    const updateNameInput = document.getElementById('update-name');
    const updateAddressInput = document.getElementById('update-address');
    const updateCityInput = document.getElementById('update-city');
    const updateCapacityInput = document.getElementById('update-capacity');
    const updateContactEmailInput = document.getElementById('update-contact_email');

    // Real-time validation for update name
    updateNameInput.addEventListener('input', function() {
        if (this.value.trim() === '') {
            this.classList.add('is-invalid');
            this.classList.remove('is-valid');
        } else {
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
        }
    });

    // Real-time validation for update address
    updateAddressInput.addEventListener('input', function() {
        if (this.value.trim() === '') {
            this.classList.add('is-invalid');
            this.classList.remove('is-valid');
        } else {
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
        }
    });

    // Real-time validation for update city
    updateCityInput.addEventListener('input', function() {
        if (this.value.trim() === '') {
            this.classList.add('is-invalid');
            this.classList.remove('is-valid');
        } else {
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
        }
    });
    
    // Real-time validation for update capacity
    updateCapacityInput.addEventListener('input', function() {
        if (this.value <= 0 || this.value === '') {
            this.classList.add('is-invalid');
            this.classList.remove('is-valid');
        } else {
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
        }
    });

    // Real-time validation for update email (only if provided)
    updateContactEmailInput.addEventListener('input', function() {
        if (this.value.trim() !== '') {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(this.value)) {
                this.classList.add('is-invalid');
                this.classList.remove('is-valid');
            } else {
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            }
        } else {
            this.classList.remove('is-invalid');
            this.classList.remove('is-valid');
        }
    });

    // Form submission validation for update form
    updateForm.addEventListener('submit', function(event) {
        if (!updateForm.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        
        updateForm.classList.add('was-validated');
    });
});
</script>

</body>

</html>