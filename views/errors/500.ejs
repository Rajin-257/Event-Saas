<div class="container py-5 text-center">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card shadow border-0">
          <div class="card-body p-5">
            <div class="mb-4">
              <i class="fas fa-exclamation-triangle fa-6x text-danger mb-3"></i>
            </div>
            <h1 class="display-4 text-danger">500</h1>
            <h2 class="mb-4">Server Error</h2>
            <p class="lead mb-4">
              <%= message || 'Something went wrong on our servers. We are working to fix the problem. Please try again later.' %>
            </p>
            <a href="/" class="btn btn-primary btn-lg">
              <i class="fas fa-home me-2"></i> Back to Home
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>