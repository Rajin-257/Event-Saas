<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/title-meta', { title: title }) %>
    <%- include('../partials/head-css') %>
    
    <style>
        .event-card {
            height: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .event-image {
            height: 180px;
            object-fit: cover;
            width: 100%;
        }
        
        .event-badge {
            position: absolute;
            top: 10px;
            right: 10px;
        }
        
        .event-date {
            font-weight: 500;
            color: #566a7f;
        }
        
        .event-category {
            display: inline-block;
            font-size: 0.75rem;
            padding: 0.3rem 0.5rem;
            border-radius: 0.25rem;
            margin-bottom: 0.5rem;
            text-transform: capitalize;
        }
        
        .category-concert { background-color: #e8f5e9; color: #2e7d32; }
        .category-seminar { background-color: #e3f2fd; color: #1565c0; }
        .category-workshop { background-color: #fff8e1; color: #ff8f00; }
        .category-conference { background-color: #f3e5f5; color: #7b1fa2; }
        .category-exhibition { background-color: #e0f7fa; color: #00838f; }
        .category-other { background-color: #f5f5f5; color: #616161; }
        
        .event-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }
        
        .event-desc {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            color: #697a8d;
            height: auto;
        }
        
        .event-info {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            color: #697a8d;
        }
        
        .event-info i {
            margin-right: 0.5rem;
            font-size: 0.9rem;
        }
        
        .filter-section {
            background-color: #f5f7fa;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
    </style>
</head>

<body>
    <!-- Begin page -->
    <div class="wrapper">
        <%- include('../partials/menu') %>
        
        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->
        <div class="page-content">
            <div class="page-container">
                <!-- Page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item active">Events</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Discover Events</h4>
                        </div>
                    </div>
                </div>
                
                <!-- Flash messages -->
                <%- include('../partials/messages') %>
                
                <!-- Filters -->
                <div class="row">
                    <div class="col-12">
                        <div class="filter-section">
                            <form id="event-filter-form">
                                <div class="row g-3">
                                    <div class="col-lg-4 col-md-6">
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="ri-search-line"></i></span>
                                            <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Search events...">
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-2 col-md-6">
                                        <select class="form-select" id="category" name="category">
                                            <option value="">All Categories</option>
                                            <option value="concert">Concert</option>
                                            <option value="seminar">Seminar</option>
                                            <option value="workshop">Workshop</option>
                                            <option value="conference">Conference</option>
                                            <option value="exhibition">Exhibition</option>
                                            <option value="other">Other</option>
                                        </select>
                                    </div>
                                    
                                    <div class="col-lg-2 col-md-6">
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="ri-calendar-line"></i></span>
                                            <input type="date" class="form-control" id="dateFrom" name="dateFrom">
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-2 col-md-6">
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="ri-calendar-line"></i></span>
                                            <input type="date" class="form-control" id="dateTo" name="dateTo">
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-2">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="ri-filter-3-line me-1"></i> Filter
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Events List -->
                <div class="row" id="events-container">
                    <% if (events && events.length > 0) { %>
                        <% events.forEach(event => { %>
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card event-card">
                                    <div class="position-relative">
                                        <% if (event.bannerImage) { %>
                                            <img src="<%= event.bannerImage %>" alt="<%= event.title %>" class="card-img-top event-image">
                                        <% } else { %>
                                            <img src="/assets/images/event-placeholder.jpg" alt="<%= event.title %>" class="card-img-top event-image">
                                        <% } %>
                                        
                                        <% if (new Date(event.startDate) >= new Date()) { %>
                                            <div class="event-badge">
                                                <span class="badge bg-success">Upcoming</span>
                                            </div>
                                        <% } else if (new Date(event.startDate) <= new Date() && new Date(event.endDate) >= new Date()) { %>
                                            <div class="event-badge">
                                                <span class="badge bg-primary">Ongoing</span>
                                            </div>
                                        <% } else { %>
                                            <div class="event-badge">
                                                <span class="badge bg-secondary">Completed</span>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <div class="card-body">
                                        <div class="event-date mb-2">
                                            <i class="ri-calendar-2-line me-1"></i>
                                            <%= new Date(event.startDate).toLocaleDateString('en-US', { 
                                                weekday: 'short', 
                                                day: 'numeric', 
                                                month: 'short', 
                                                year: 'numeric' 
                                            }) %>
                                        </div>
                                        
                                        <span class="event-category category-<%= event.category %>">
                                            <%= event.category %>
                                        </span>
                                        
                                        <h5 class="event-title">
                                            <a href="/events/<%= event.id %>" class="text-reset">
                                                <%= event.title %>
                                            </a>
                                        </h5>
                                        
                                        <p class="event-desc">
                                            <%= event.description %>
                                        </p>
                                        
                                        <div class="event-info">
                                            <i class="ti ti-arrow-right-to-arc"></i>
                                            <span><%= event.venue %></span>
                                        </div>
                                        
                                        <div class="event-info">
                                            <i class="ti ti-arrow-right-to-arc"></i>
                                            <span>By <%= event.organizer ? event.organizer.name : 'Unknown' %></span>
                                        </div>
                                    </div>
                                    
                                    <div class="card-footer bg-transparent">
                                        <a href="/events/<%= event.id %>" class="btn btn-primary w-100">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <div class="text-center py-5">
                                <img src="/assets/images/no-events.svg" alt="No events found" class="img-fluid mb-4" style="max-width: 200px;">
                                <h4>No Events Found</h4>
                                <p class="text-muted">
                                    There are no events available at the moment.
                                    <% if (locals.user && locals.user.role === 'organizer') { %>
                                        <a href="/events/create" class="btn btn-outline-primary mt-3">
                                            <i class="ri-add-line me-1"></i> Create an Event
                                        </a>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    <% } %>
                </div>
                
            </div>
            <!-- container -->
            <%- include('../partials/footer') %>
        </div>
        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->
    </div>
    <!-- END wrapper -->

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set default date range (next 3 months)
            const today = new Date();
            document.getElementById('dateFrom').valueAsDate = today;
            
            const threeMothsLater = new Date();
            threeMothsLater.setMonth(today.getMonth() + 3);
            document.getElementById('dateTo').valueAsDate = threeMothsLater;
            
            // Filter form submission
            const filterForm = document.getElementById('event-filter-form');
            if (filterForm) {
                filterForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const formData = new FormData(this);
                    const params = new URLSearchParams();
                    
                    for (let [key, value] of formData.entries()) {
                        if (value) {
                            params.append(key, value);
                        }
                    }
                    
                    window.location.href = `/events?${params.toString()}`;
                });
            }
        });
    </script>

    <%- include('../partials/footer-scripts') %>
</body>
</html>