<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Event Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">
  <%- include('../partials/header') %>
  
  <div class="container-fluid">
    <div class="row">
      <%- include('../partials/sidebar') %>
      
      <div class="col-lg-10 col-md-12 px-4 py-4">
        <!-- Alert messages -->
        <% if(success_msg != '') { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        
        <% if(error_msg != '') { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        
        <nav aria-label="breadcrumb" class="mb-4">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/events">Events</a></li>
            <li class="breadcrumb-item"><a href="/events/<%= event.id %>"><%= event.title %></a></li>
            <li class="breadcrumb-item active" aria-current="page">Guests</li>
          </ol>
        </nav>
        
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h1 class="h3 mb-0">Event Guests</h1>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addGuestModal">
            <i class="bi bi-plus-circle me-2"></i> Add Guest
          </button>
        </div>
        
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Event Information</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-8">
                <h4><%= event.title %></h4>
                <p class="text-muted mb-1">
                  <i class="bi bi-calendar-event me-2"></i> <%= new Date(event.start_date).toLocaleDateString() %> - <%= new Date(event.end_date).toLocaleDateString() %>
                </p>
                <p class="text-muted">
                  <i class="bi bi-geo-alt me-2"></i> <%= event.Venue.name %>, <%= event.Venue.city %>
                </p>
              </div>
              <div class="col-md-4 text-md-end">
                <a href="/events/<%= event.id %>" class="btn btn-outline-primary">
                  <i class="bi bi-arrow-left me-2"></i> Back to Event
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Guest List</h5>
            <span class="badge bg-primary"><%= eventGuests.length %> Guests</span>
          </div>
          
          <% if (eventGuests.length === 0) { %>
            <div class="card-body text-center py-5">
              <div class="mb-4">
                <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
              </div>
              <h5>No Guests Added</h5>
              <p class="text-muted">This event doesn't have any guests yet.</p>
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addGuestModal">
                <i class="bi bi-plus-circle me-2"></i> Add Guest
              </button>
            </div>
          <% } else { %>
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Department</th>
                      <th>Contact</th>
                      <th>Role</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% eventGuests.forEach(guest => { %>
                      <tr>
                        <td class="align-middle">
                          <div class="d-flex align-items-center">
                            <% if (guest.profile_image) { %>
                              <img src="/<%= guest.profile_image %>" alt="<%= guest.first_name %>" class="rounded-circle me-2" width="40" height="40" style="object-fit: cover;">
                            <% } else { %>
                              <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                <i class="bi bi-person text-secondary"></i>
                              </div>
                            <% } %>
                            <div>
                              <h6 class="mb-0"><%= guest.first_name %> <%= guest.last_name %></h6>
                              <small class="text-muted"><%= guest.email || 'No email' %></small>
                            </div>
                          </div>
                        </td>
                        <td class="align-middle">
                          <%= guest.Department ? guest.Department.name : 'Not specified' %>
                        </td>
                        <td class="align-middle">
                          <%= guest.phone || 'Not provided' %>
                        </td>
                        <td class="align-middle">
                          <span class="role-display-<%= guest.id %>">
                            <%= guest.EventGuest.role || 'Not specified' %>
                          </span>
                          <div class="role-edit-<%= guest.id %> d-none">
                            <div class="input-group input-group-sm">
                              <input type="text" class="form-control form-control-sm role-input-<%= guest.id %>" value="<%= guest.EventGuest.role || '' %>" placeholder="Enter role">
                              <button class="btn btn-sm btn-outline-success save-role-btn" data-guest-id="<%= guest.id %>">
                                <i class="bi bi-check"></i>
                              </button>
                              <button class="btn btn-sm btn-outline-secondary cancel-role-btn" data-guest-id="<%= guest.id %>">
                                <i class="bi bi-x"></i>
                              </button>
                            </div>
                          </div>
                        </td>
                        <td class="align-middle">
                          <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-primary edit-role-btn" data-guest-id="<%= guest.id %>">
                              <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#removeGuestModal" data-guest-id="<%= guest.id %>" data-guest-name="<%= guest.first_name %> <%= guest.last_name %>">
                              <i class="bi bi-trash"></i>
                            </button>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../partials/footer') %>
  
  <!-- Add Guest Modal -->
  <div class="modal fade" id="addGuestModal" tabindex="-1" aria-labelledby="addGuestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addGuestModalLabel">Add Guest to Event</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <% if (availableGuests.length === 0) { %>
            <div class="alert alert-info">
              <i class="bi bi-info-circle-fill me-2"></i>
              There are no more guests available to add to this event. Please create new guests first.
            </div>
            <div class="text-center mt-3">
              <a href="/guests/create" class="btn btn-primary">Create New Guest</a>
            </div>
          <% } else { %>
            <form id="addGuestForm">
              <div class="mb-3">
                <label for="guest_id" class="form-label">Select Guest</label>
                <select id="guest_id" name="guest_id" class="form-select" required>
                  <option value="">-- Select a guest --</option>
                  <% availableGuests.forEach(guest => { %>
                    <option value="<%= guest.id %>">
                      <%= guest.first_name %> <%= guest.last_name %> 
                      <% if (guest.Department) { %> 
                        (<%= guest.Department.name %>)
                      <% } %>
                    </option>
                  <% }); %>
                </select>
              </div>
              <div class="mb-3">
                <label for="role" class="form-label">Role (Optional)</label>
                <input type="text" id="role" name="role" class="form-control" placeholder="e.g. Speaker, Panelist, VIP, etc.">
                <div class="form-text">Specify the guest's role in this event</div>
              </div>
            </form>
          <% } %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <% if (availableGuests.length > 0) { %>
            <button type="button" class="btn btn-primary" id="addGuestBtn">Add Guest</button>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Remove Guest Modal -->
  <div class="modal fade" id="removeGuestModal" tabindex="-1" aria-labelledby="removeGuestModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="removeGuestModalLabel">Remove Guest</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to remove <span id="guestName"></span> from this event?</p>
          <p class="text-muted">This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" id="removeGuestBtn">Remove</button>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Variables to store the current guest ID for removal
      let currentGuestId = null;
      
      // Handle Add Guest form submission
      document.getElementById('addGuestBtn')?.addEventListener('click', async function() {
        const guestId = document.getElementById('guest_id').value;
        const role = document.getElementById('role').value;
        
        if (!guestId) {
          alert('Please select a guest');
          return;
        }
        
        try {
          const response = await fetch(`/api/events/<%= event.id %>/guests`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              guest_id: guestId,
              role: role
            })
          });
          
          const result = await response.json();
          
          if (response.ok && result.status === 'success') {
            // Reload page to show updated guest list
            window.location.reload();
          } else {
            alert(`Error: ${result.message || 'Failed to add guest'}`);
          }
        } catch (error) {
          console.error('Error adding guest:', error);
          alert('An error occurred. Please try again.');
        }
      });
      
      // Setup Remove Guest modal
      const removeGuestModal = document.getElementById('removeGuestModal');
      if (removeGuestModal) {
        removeGuestModal.addEventListener('show.bs.modal', function(event) {
          const button = event.relatedTarget;
          currentGuestId = button.getAttribute('data-guest-id');
          const guestName = button.getAttribute('data-guest-name');
          
          document.getElementById('guestName').textContent = guestName;
        });
      }
      
      // Handle Remove Guest button click
      document.getElementById('removeGuestBtn')?.addEventListener('click', async function() {
        if (!currentGuestId) return;
        
        try {
          const response = await fetch(`/api/events/<%= event.id %>/guests/${currentGuestId}`, {
            method: 'DELETE'
          });
          
          const result = await response.json();
          
          if (response.ok && result.status === 'success') {
            // Reload page to show updated guest list
            window.location.reload();
          } else {
            alert(`Error: ${result.message || 'Failed to remove guest'}`);
          }
        } catch (error) {
          console.error('Error removing guest:', error);
          alert('An error occurred. Please try again.');
        }
      });
      
      // Handle Edit Role buttons
      document.querySelectorAll('.edit-role-btn').forEach(button => {
        button.addEventListener('click', function() {
          const guestId = this.getAttribute('data-guest-id');
          
          // Hide display, show edit form
          document.querySelector(`.role-display-${guestId}`).classList.add('d-none');
          document.querySelector(`.role-edit-${guestId}`).classList.remove('d-none');
          
          // Focus the input
          document.querySelector(`.role-input-${guestId}`).focus();
        });
      });
      
      // Handle Save Role buttons
      document.querySelectorAll('.save-role-btn').forEach(button => {
        button.addEventListener('click', async function() {
          const guestId = this.getAttribute('data-guest-id');
          const roleInput = document.querySelector(`.role-input-${guestId}`);
          const newRole = roleInput.value.trim();
          
          try {
            const response = await fetch(`/api/events/<%= event.id %>/guests/${guestId}`, {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                role: newRole
              })
            });
            
            const result = await response.json();
            
            if (response.ok && result.status === 'success') {
              // Update display value
              const displayElement = document.querySelector(`.role-display-${guestId}`);
              displayElement.textContent = newRole || 'Not specified';
              
              // Hide edit form, show display
              document.querySelector(`.role-edit-${guestId}`).classList.add('d-none');
              displayElement.classList.remove('d-none');
            } else {
              alert(`Error: ${result.message || 'Failed to update role'}`);
            }
          } catch (error) {
            console.error('Error updating role:', error);
            alert('An error occurred. Please try again.');
          }
        });
      });
      
      // Handle Cancel Role edit buttons
      document.querySelectorAll('.cancel-role-btn').forEach(button => {
        button.addEventListener('click', function() {
          const guestId = this.getAttribute('data-guest-id');
          
          // Hide edit form, show display
          document.querySelector(`.role-edit-${guestId}`).classList.add('d-none');
          document.querySelector(`.role-display-${guestId}`).classList.remove('d-none');
        });
      });
    });
  </script>
</body>
</html>