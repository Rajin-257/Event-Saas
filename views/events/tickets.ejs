<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/title-meta', { title: title }) %>
    <%- include('../partials/head-css') %>
    
    <!-- Flatpickr date-time picker CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.css">
    
    <style>
        .ticket-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }
        
        .ticket-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .ticket-type {
            position: absolute;
            top: 10px;
            right: 10px;
        }
        
        .actions-bar {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 1.5rem;
        }
        
        .section-title {
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
        }
        
        .section-title i {
            margin-right: 0.75rem;
            font-size: 1.25rem;
        }
        
        .required-label::after {
            content: " *";
            color: #ff5b5b;
        }
        
        .nav-tabs {
            margin-bottom: 1.5rem;
        }
        
        .ticket-icon {
            font-size: 2rem;
            color: #696cff;
            margin-bottom: 1rem;
        }
        
        .ticket-price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #696cff;
        }
        
        .ticket-quantity {
            background-color: #f5f7fa;
            padding: 0.5rem;
            border-radius: 0.25rem;
            display: inline-block;
            margin-top: 0.5rem;
        }
        
        .ticket-dates {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 0.5rem;
        }
        
        .ticket-status {
            display: flex;
            align-items: center;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #f0f0f0;
        }
        
        .ticket-status .status-indicator {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 0.5rem;
        }
        
        .active-indicator {
            background-color: #198754;
        }
        
        .inactive-indicator {
            background-color: #dc3545;
        }
    </style>
</head>

<body>
    <!-- Begin page -->
    <div class="wrapper">
        <%- include('../partials/menu') %>
        
        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->
        <div class="page-content">
            <div class="page-container">
                <!-- Page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                                    <li class="breadcrumb-item"><a href="/events">Events</a></li>
                                    <li class="breadcrumb-item"><a href="/events/<%= event.id %>"><%= event.title %></a></li>
                                    <li class="breadcrumb-item active">Manage Tickets</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Manage Tickets</h4>
                        </div>
                    </div>
                </div>

                <!-- Flash messages -->
                <%- include('../partials/messages') %>
                
                <!-- Event Management Tabs -->
                <ul class="nav nav-tabs nav-bordered" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link" href="/events/<%= event.id %>/edit">
                            <i class="ri-edit-box-line me-1"></i> Edit Details
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events/<%= event.id %>/speakers">
                            <i class="ri-user-voice-line me-1"></i> Manage Speakers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/tickets/events/<%= event.id %>/tickets">
                            <i class="ri-ticket-2-line me-1"></i> Manage Tickets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/tickets/events/<%= event.id %>/attendees">
                            <i class="ri-group-line me-1"></i> Attendees
                        </a>
                    </li>
                </ul>
                
                <!-- Action Bar -->
                <div class="row">
                    <div class="col-12">
                        <div class="actions-bar">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTicketModal">
                                <i class="ri-add-line me-1"></i> Add New Ticket Type
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Tickets List -->
                <div class="row">
                    <% if (ticketTypes && ticketTypes.length > 0) { %>
                        <% ticketTypes.forEach(ticket => { %>
                            <div class="col-xl-4 col-lg-6 col-md-6 mb-4">
                                <div class="card ticket-card h-100">
                                    <div class="position-relative">
                                        <div class="ticket-type">
                                            <% 
                                                let badgeClass = 'bg-info';
                                                if (ticket.type === 'vip') badgeClass = 'bg-primary';
                                                if (ticket.type === 'early_bird') badgeClass = 'bg-warning';
                                                if (ticket.type === 'standard') badgeClass = 'bg-success';
                                            %>
                                            <span class="badge <%= badgeClass %>">
                                                <%= ticket.type.replace('_', ' ').toUpperCase() %>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="card-body text-center pt-4">
                                        <div class="ticket-icon">
                                            <i class="ri-ticket-2-fill"></i>
                                        </div>
                                        
                                        <h5 class="card-title"><%= ticket.name %></h5>
                                        
                                        <div class="ticket-price mb-3">
                                            <%= ticket.price > 0 ? '$' + parseFloat(ticket.price).toFixed(2) : 'FREE' %>
                                        </div>
                                        
                                        <% if (ticket.description) { %>
                                            <p class="card-text mb-3">
                                                <%= ticket.description %>
                                            </p>
                                        <% } %>
                                        
                                        <div class="ticket-quantity">
                                            <strong><%= ticket.availableQuantity %></strong> of <strong><%= ticket.quantity %></strong> tickets available
                                        </div>
                                        
                                        <div class="ticket-dates mt-3">
                                            <div>
                                                <i class="ri-calendar-line me-1"></i> Sale starts: 
                                                <%= new Date(ticket.saleStartDate).toLocaleDateString('en-US', { 
                                                    month: 'short',
                                                    day: 'numeric',
                                                    year: 'numeric'
                                                }) %>
                                            </div>
                                            <div>
                                                <i class="ri-calendar-line me-1"></i> Sale ends: 
                                                <%= new Date(ticket.saleEndDate).toLocaleDateString('en-US', { 
                                                    month: 'short',
                                                    day: 'numeric',
                                                    year: 'numeric'
                                                }) %>
                                            </div>
                                        </div>
                                        
                                        <div class="ticket-status">
                                            <div class="status-indicator <%= ticket.isActive ? 'active-indicator' : 'inactive-indicator' %>"></div>
                                            <span><%= ticket.isActive ? 'Active' : 'Inactive' %></span>
                                        </div>
                                    </div>
                                    
                                    <div class="card-footer bg-transparent">
                                        <div class="d-flex justify-content-between">
                                            <button 
                                                type="button" 
                                                class="btn btn-sm btn-primary" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editTicketModal"
                                                onclick="editTicket('<%= ticket.id %>')">
                                                <i class="ri-edit-2-line me-1"></i> Edit
                                            </button>
                                            
                                            <button 
                                                type="button" 
                                                class="btn btn-sm btn-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteTicketModal"
                                                onclick="setDeleteTicketId('<%= ticket.id %>', '<%= ticket.name %>')">
                                                <i class="ri-delete-bin-line me-1"></i> Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <div class="text-center py-5">
                                <img src="/assets/images/no-tickets.svg" alt="No tickets found" class="img-fluid mb-4" style="max-width: 200px;">
                                <h4>No Ticket Types Added Yet</h4>
                                <p class="text-muted">Define ticket types to start selling tickets for your event.</p>
                                <button type="button" class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#addTicketModal">
                                    <i class="ri-add-line me-1"></i> Add First Ticket Type
                                </button>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <!-- Add Ticket Modal -->
                <div class="modal fade" id="addTicketModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <form action="/tickets/events/<%= event.id %>/ticketss" method="POST">
                                <div class="modal-header">
                                    <h5 class="modal-title">Add New Ticket Type</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row g-3">
                                        <!-- Basic Info -->
                                        <div class="col-lg-6">
                                            <label for="name" class="form-label required-label">Ticket Name</label>
                                            <input type="text" class="form-control" id="name" name="name" placeholder="e.g. General Admission" required>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="type" class="form-label required-label">Ticket Type</label>
                                            <select class="form-select" id="type" name="type" required>
                                                <option value="" disabled selected>Select ticket type</option>
                                                <option value="premium">Premium</option>
                                                <option value="vip">VIP</option>
                                                <option value="early_bird">Early Bird</option>
                                                <option value="general">General</option>
                                                <option value="other">Other</option>
                                            </select>
                                        </div>
                                        
                                        <div class="col-lg-12">
                                            <label for="description" class="form-label">Description</label>
                                            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Describe what this ticket includes"></textarea>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="price" class="form-label required-label">Price ($)</label>
                                            <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" placeholder="0.00" required>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="quantity" class="form-label required-label">Total Quantity</label>
                                            <input type="number" class="form-control" id="quantity" name="quantity" min="1" placeholder="100" required>
                                        </div>
                                        
                                        <!-- Sale Period -->
                                        <div class="col-lg-12 mt-3">
                                            <hr>
                                            <h5 class="section-title">
                                                <i class="ri-calendar-line"></i>
                                                Sale Period
                                            </h5>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="saleStartDate" class="form-label required-label">Sale Start Date</label>
                                            <input type="text" class="form-control datepicker" id="saleStartDate" name="saleStartDate" placeholder="Select date" required>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="saleEndDate" class="form-label required-label">Sale End Date</label>
                                            <input type="text" class="form-control datepicker" id="saleEndDate" name="saleEndDate" placeholder="Select date" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Add Ticket Type</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Edit Ticket Modal -->
                <div class="modal fade" id="editTicketModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <form action="/tickets/events/<%= event.id %>/ticketss" method="POST" id="editTicketForm">
                                <div class="modal-header">
                                    <h5 class="modal-title">Edit Ticket Type</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row g-3">
                                        <!-- Basic Info -->
                                        <div class="col-lg-6">
                                            <label for="editName" class="form-label required-label">Ticket Name</label>
                                            <input type="text" class="form-control" id="editName" name="name" placeholder="e.g. General Admission" required>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="editType" class="form-label required-label">Ticket Type</label>
                                            <select class="form-select" id="editType" name="type" required>
                                                <option value="" disabled>Select ticket type</option>
                                                <option value="standard">Standard</option>
                                                <option value="vip">VIP</option>
                                                <option value="early_bird">Early Bird</option>
                                                <option value="student">Student</option>
                                                <option value="group">Group</option>
                                                <option value="free">Free</option>
                                            </select>
                                        </div>
                                        
                                        <div class="col-lg-12">
                                            <label for="editDescription" class="form-label">Description</label>
                                            <textarea class="form-control" id="editDescription" name="description" rows="3" placeholder="Describe what this ticket includes"></textarea>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="editPrice" class="form-label required-label">Price ($)</label>
                                            <input type="number" class="form-control" id="editPrice" name="price" min="0" step="0.01" placeholder="0.00" required>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="editQuantity" class="form-label required-label">Total Quantity</label>
                                            <input type="number" class="form-control" id="editQuantity" name="quantity" min="1" placeholder="100" required>
                                        </div>
                                        
                                        <!-- Sale Period -->
                                        <div class="col-lg-12 mt-3">
                                            <hr>
                                            <h5 class="section-title">
                                                <i class="ri-calendar-line"></i>
                                                Sale Period
                                            </h5>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="editSaleStartDate" class="form-label required-label">Sale Start Date</label>
                                            <input type="text" class="form-control datepicker" id="editSaleStartDate" name="saleStartDate" placeholder="Select date" required>
                                        </div>
                                        
                                        <div class="col-lg-6">
                                            <label for="editSaleEndDate" class="form-label required-label">Sale End Date</label>
                                            <input type="text" class="form-control datepicker" id="editSaleEndDate" name="saleEndDate" placeholder="Select date" required>
                                        </div>
                                        
                                        <!-- Active Status -->
                                        <div class="col-lg-12 mt-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="editIsActive" name="isActive">
                                                <label class="form-check-label" for="editIsActive">Active (available for sale)</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Delete Ticket Modal -->
                <div class="modal fade" id="deleteTicketModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Delete Ticket Type</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="text-center mb-4">
                                    <i class="ri-delete-bin-5-line text-danger" style="font-size: 3rem;"></i>
                                    <h4 class="mt-2">Are you sure?</h4>
                                    <p class="text-muted" id="deleteTicketMessage">
                                        Do you really want to delete this ticket type? This action cannot be undone.
                                    </p>
                                    <div class="alert alert-danger">
                                        <i class="ri-information-line me-2"></i>
                                        Ticket types with sold tickets Also delete Please aware.
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                <form action="" method="POST" id="deleteTicketForm">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="ri-delete-bin-line me-1"></i> Delete Ticket
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <!-- container -->
            <%- include('../partials/footer') %>
        </div>
        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->
    </div>
    <!-- END wrapper -->

    <!-- Flatpickr date-time picker JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize date pickers
            const dateConfig = {
                enableTime: false,
                dateFormat: "Y-m-d",
                minDate: "today",
                allowInput: true
            };
            
            // For add ticket modal
            flatpickr("#saleStartDate", dateConfig);
            flatpickr("#saleEndDate", {
                ...dateConfig,
                minDate: document.getElementById('saleStartDate').value || "today"
            });
            
            // For edit ticket modal
            flatpickr("#editSaleStartDate", dateConfig);
            flatpickr("#editSaleEndDate", {
                ...dateConfig,
                minDate: document.getElementById('editSaleStartDate').value || "today"
            });
            
            // Update end date min when start date changes
            document.getElementById('saleStartDate').addEventListener('change', function() {
                const startDate = this.value;
                if (startDate) {
                    document.getElementById('saleEndDate')._flatpickr.set('minDate', startDate);
                }
            });
            
            document.getElementById('editSaleStartDate').addEventListener('change', function() {
                const startDate = this.value;
                if (startDate) {
                    document.getElementById('editSaleEndDate')._flatpickr.set('minDate', startDate);
                }
            });
            
            // Form validation
            const addForm = document.querySelector('#addTicketModal form');
            addForm.addEventListener('submit', function(event) {
                // Basic validation
                if (!addForm.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    
                    // Highlight all invalid fields
                    const invalidFields = addForm.querySelectorAll(':invalid');
                    invalidFields.forEach(field => {
                        field.classList.add('is-invalid');
                        
                        // Add invalid feedback if not already present
                        const parent = field.parentElement;
                        if (!parent.querySelector('.invalid-feedback')) {
                            const feedback = document.createElement('div');
                            feedback.className = 'invalid-feedback';
                            feedback.textContent = field.validationMessage;
                            parent.appendChild(feedback);
                        }
                    });
                }
                
                addForm.classList.add('was-validated');
            });
            
            const editForm = document.querySelector('#editTicketForm');
            editForm.addEventListener('submit', function(event) {
                // Basic validation
                if (!editForm.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    
                    // Highlight all invalid fields
                    const invalidFields = editForm.querySelectorAll(':invalid');
                    invalidFields.forEach(field => {
                        field.classList.add('is-invalid');
                        
                        // Add invalid feedback if not already present
                        const parent = field.parentElement;
                        if (!parent.querySelector('.invalid-feedback')) {
                            const feedback = document.createElement('div');
                            feedback.className = 'invalid-feedback';
                            feedback.textContent = field.validationMessage;
                            parent.appendChild(feedback);
                        }
                    });
                }
                
                editForm.classList.add('was-validated');
            });
        });
        
        // Edit ticket function
        function editTicket(ticketId) {
            // Parse the ticket data from the server-rendered JSON
            const tickets = JSON.parse('<%- JSON.stringify(ticketTypes || []) %>');
            const ticket = tickets.find(t => t.id === ticketId);
                
            if (ticket) {
                // Update form action
                const form = document.getElementById('editTicketForm');
                form.action = `/tickets/events/<%= event.id %>/tickets/${ticketId}`;
                
                // Populate form fields
                document.getElementById('editName').value = ticket.name || '';
                document.getElementById('editType').value = ticket.type || '';
                document.getElementById('editDescription').value = ticket.description || '';
                document.getElementById('editPrice').value = ticket.price || 0;
                document.getElementById('editQuantity').value = ticket.quantity || 1;
                
                // Format dates for the date picker
                const formatDate = (dateString) => {
                    if (!dateString) return '';
                    const date = new Date(dateString);
                    return date.toISOString().split('T')[0];
                };
                
                // Set sale dates
                const saleStartDate = formatDate(ticket.saleStartDate);
                const saleEndDate = formatDate(ticket.saleEndDate);
                
                document.getElementById('editSaleStartDate').value = saleStartDate;
                document.getElementById('editSaleEndDate').value = saleEndDate;
                
                // Update flatpickr instances with new values
                if (document.getElementById('editSaleStartDate')._flatpickr) {
                    document.getElementById('editSaleStartDate')._flatpickr.setDate(saleStartDate);
                }
                
                if (document.getElementById('editSaleEndDate')._flatpickr) {
                    document.getElementById('editSaleEndDate')._flatpickr.setDate(saleEndDate);
                }
                
                // Set active status
                document.getElementById('editIsActive').checked = ticket.isActive;
            } else {
                console.error('Ticket not found with ID:', ticketId);
            }
        }

        // Set up delete ticket modal
        function setDeleteTicketId(ticketId, ticketName) {
            const form = document.getElementById('deleteTicketForm');
            form.action = `/tickets/delete/<%= event.id %>/tickets/${ticketId}`;
            
            // Update confirmation message
            const message = document.getElementById('deleteTicketMessage');
            message.textContent = `Do you really want to delete the ticket type "${ticketName}"? This action cannot be undone.`;
        }
    </script>

    <%- include('../partials/footer-scripts') %>
</body>
</html>