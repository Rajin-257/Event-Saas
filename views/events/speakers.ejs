<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/title-meta', { title: title }) %>
    <%- include('../partials/head-css') %>
    
    <!-- Flatpickr date-time picker CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.css">
    
    <!-- Dropzone CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.min.css">
    
    <style>
        .speaker-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }
        
        .speaker-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .speaker-image {
            height: 200px;
            object-fit: cover;
            width: 100%;
            border-radius: 0.5rem 0.5rem 0 0;
        }
        
        .speaker-type {
            position: absolute;
            top: 10px;
            right: 10px;
        }
        
        .actions-bar {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 1.5rem;
        }
        
        .section-title {
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
        }
        
        .section-title i {
            margin-right: 0.75rem;
            font-size: 1.25rem;
        }
        
        .required-label::after {
            content: " *";
            color: #ff5b5b;
        }
        
        .dropzone {
            border: 2px dashed #ccc;
            border-radius: 0.5rem;
            background: #f9f9f9;
            padding: 2rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .dropzone:hover {
            border-color: #696cff;
            background: #f0f0ff;
        }
        
        .dropzone .dz-message {
            margin: 1rem 0 0;
        }
        
        .photo-preview {
            width: 150px;
            height: 150px;
            margin-top: 1rem;
            border-radius: 50%;
            background-color: #f5f7fa;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
            margin: 0 auto;
        }
        
        .photo-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .photo-preview .placeholder {
            color: #adb5bd;
            text-align: center;
            padding: 1rem;
        }
        
        .nav-tabs {
            margin-bottom: 1.5rem;
        }
    </style>
</head>

<body>
    <!-- Begin page -->
    <div class="wrapper">
        <%- include('../partials/menu') %>
        
        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->
        <div class="page-content">
            <div class="page-container">
                <!-- Page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                                    <li class="breadcrumb-item"><a href="/events">Events</a></li>
                                    <li class="breadcrumb-item"><a href="/events/<%= event.id %>"><%= event.title %></a></li>
                                    <li class="breadcrumb-item active">Manage Speakers</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Manage Speakers</h4>
                        </div>
                    </div>
                </div>

                <!-- Flash messages -->
                <%- include('../partials/messages') %>
                
                <!-- Event Management Tabs -->
                <ul class="nav nav-tabs nav-bordered" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link" href="/events/<%= event.id %>/edit">
                            <i class="ri-edit-box-line me-1"></i> Edit Details
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/events/<%= event.id %>/speakers">
                            <i class="ri-user-voice-line me-1"></i> Manage Speakers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/tickets/events/<%= event.id %>/tickets">
                            <i class="ri-ticket-2-line me-1"></i> Manage Tickets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/registrations/<%= event.id %>">
                            <i class="ri-group-line me-1"></i> Attendees
                        </a>
                    </li>
                </ul>
                
                <!-- Action Bar -->
                <div class="row">
                    <div class="col-12">
                        <div class="actions-bar">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSpeakerModal">
                                <i class="ri-user-add-line me-1"></i> Add New Speaker
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Speakers List -->
                <div class="row">
                    <% if (speakers && speakers.length > 0) { %>
                        <% speakers.forEach(speaker => { %>
                            <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                                <div class="card speaker-card h-100">
                                    <div class="position-relative">
                                        <% if (speaker.photo) { %>
                                            <img src="<%= speaker.photo %>" alt="<%= speaker.name %>" class="speaker-image">
                                        <% } else { %>
                                            <img src="/assets/images/speaker-placeholder.jpg" alt="<%= speaker.name %>" class="speaker-image">
                                        <% } %>
                                        
                                        <div class="speaker-type">
                                            <% 
                                                let badgeClass = 'bg-info';
                                                if (speaker.speakerType === 'keynote') badgeClass = 'bg-primary';
                                                if (speaker.speakerType === 'panel') badgeClass = 'bg-warning';
                                                if (speaker.speakerType === 'guest') badgeClass = 'bg-success';
                                            %>
                                            <span class="badge <%= badgeClass %>">
                                                <%= speaker.speakerType %>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="card-body">
                                        <h5 class="card-title mb-1"><%= speaker.name %></h5>
                                        
                                        <% if (speaker.designation && speaker.organization) { %>
                                            <p class="text-muted">
                                                <%= speaker.designation %> at <%= speaker.organization %>
                                            </p>
                                        <% } else if (speaker.designation) { %>
                                            <p class="text-muted"><%= speaker.designation %></p>
                                        <% } else if (speaker.organization) { %>
                                            <p class="text-muted"><%= speaker.organization %></p>
                                        <% } %>
                                        
                                        <% if (speaker.bio) { %>
                                            <p class="card-text mb-3" style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                                                <%= speaker.bio %>
                                            </p>
                                        <% } %>
                                        
                                        <% if (speaker.sessionTopic) { %>
                                            <div class="mt-3 pt-3 border-top">
                                                <strong>Session:</strong> <%= speaker.sessionTopic %>
                                                
                                                <% if (speaker.sessionTime) { %>
                                                    <div class="mt-1">
                                                        <i class="ti ti-clock"></i>
                                                        <%= new Date(speaker.sessionTime).toLocaleString('en-US', { 
                                                            month: 'short',
                                                            day: 'numeric',
                                                            hour: '2-digit', 
                                                            minute: '2-digit'
                                                        }) %>
                                                        
                                                        <% if (speaker.sessionDuration) { %>
                                                            (<%= speaker.sessionDuration %> mins)
                                                        <% } %>
                                                    </div>
                                                <% } %>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <div class="card-footer bg-transparent">
                                        <div class="d-flex justify-content-between">
                                            <button 
                                                type="button" 
                                                class="btn btn-sm btn-primary" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editSpeakerModal"
                                                data-speaker-id="<%= speaker.id %>"
                                                data-speaker-name="<%= speaker.name %>"
                                                data-speaker-type="<%= speaker.speakerType %>"
                                                data-speaker-designation="<%= speaker.designation || '' %>"
                                                data-speaker-organization="<%= speaker.organization || '' %>"
                                                data-speaker-bio="<%= speaker.bio || '' %>"
                                                data-speaker-session-topic="<%= speaker.sessionTopic || '' %>"
                                                data-speaker-session-time="<%= speaker.sessionTime ? new Date(speaker.sessionTime).toISOString().slice(0, 16) : '' %>"
                                                data-speaker-session-duration="<%= speaker.sessionDuration || '' %>"
                                                data-speaker-photo="<%= speaker.photo || '' %>"
                                                onclick="editSpeaker(this)">
                                                <i class="ri-edit-2-line me-1"></i> Edit
                                            </button>

                                            <button 
                                                type="button" 
                                                class="btn btn-sm btn-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteSpeakerModal"
                                                data-speaker-id="<%= speaker.id %>"
                                                data-speaker-name="<%= speaker.name %>"
                                                onclick="setDeleteSpeakerId(this.dataset.speakerId, this.dataset.speakerName)">
                                                <i class="ri-delete-bin-line me-1"></i> Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12">
                            <div class="text-center py-5">
                                <img src="/assets/images/no-speakers.svg" alt="No speakers found" class="img-fluid mb-4" style="max-width: 200px;">
                                <h4>No Speakers Added Yet</h4>
                                <p class="text-muted">Add speakers to enhance your event details and provide more information to potential attendees.</p>
                                <button type="button" class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#addSpeakerModal">
                                    <i class="ri-user-add-line me-1"></i> Add First Speaker
                                </button>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <!-- Add Speaker Modal -->
                <div class="modal fade" id="addSpeakerModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <form action="/events/<%= event.id %>/speakers" method="POST" enctype="multipart/form-data">
                                <div class="modal-header">
                                    <h5 class="modal-title">Add New Speaker</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row g-3">
                                        <!-- Speaker Photo -->
                                        <div class="col-lg-12 text-center">
                                            <label for="speakerPhoto" class="form-label">Speaker Photo</label>
                                            <div class="photo-preview mb-2" id="photoPreview">
                                                <img id="photoPreviewImg" src="" alt="Preview" class="img-thumbnail d-none" style="width: 120px; height: 120px; object-fit: cover;">
                                                <div id="photoPlaceholder" class="placeholder">
                                                    <i class="ri-user-line" style="font-size: 2rem;"></i>
                                                    <p class="mt-2 mb-0">Click to upload a speaker image</p>
                                                    <p class="text-muted small">Recommended size: 300x300px</p>
                                                </div>
                                            </div>
                                            <input type="file" name="speakerPhoto" id="speakerPhoto" class="form-control" accept="image/*">
                                        </div>
                                    
                                        <!-- Basic Info -->
                                        <div class="col-lg-6">
                                            <label for="name" class="form-label required-label">Name</label>
                                            <input type="text" class="form-control" id="name" name="name" placeholder="Full name" required>
                                        </div>
                                    
                                        <div class="col-lg-6">
                                            <label for="speakerType" class="form-label required-label">Speaker Type</label>
                                            <select class="form-select" id="speakerType" name="speakerType" required>
                                                <option value="" disabled selected>Select speaker type</option>
                                                <option value="keynote">Keynote Speaker</option>
                                                <option value="guest">Guest Speaker</option>
                                                <option value="panel">Panel Member</option>
                                                <option value="regular">Regular Speaker</option>
                                            </select>
                                        </div>
                                    
                                        <div class="col-lg-6">
                                            <label for="designation" class="form-label">Designation/Title</label>
                                            <input type="text" class="form-control" id="designation" name="designation" placeholder="e.g. CTO, Professor, etc.">
                                        </div>
                                    
                                        <div class="col-lg-6">
                                            <label for="organization" class="form-label">Organization/Company</label>
                                            <input type="text" class="form-control" id="organization" name="organization" placeholder="Company or organization name">
                                        </div>
                                    
                                        <div class="col-lg-12">
                                            <label for="bio" class="form-label">Biography</label>
                                            <textarea class="form-control" id="bio" name="bio" rows="4" placeholder="Brief professional bio"></textarea>
                                        </div>
                                    
                                        <!-- Session Details -->
                                        <div class="col-lg-12 mt-3">
                                            <hr>
                                            <h5 class="section-title">
                                                <i class="ri-presentation-line"></i>
                                                Session Details
                                            </h5>
                                        </div>
                                    
                                        <div class="col-lg-12">
                                            <label for="sessionTopic" class="form-label">Session Topic/Title</label>
                                            <input type="text" class="form-control" id="sessionTopic" name="sessionTopic" placeholder="Topic or title of the speaker's session">
                                        </div>
                                    
                                        <div class="col-lg-6">
                                            <label for="sessionTime" class="form-label">Session Time</label>
                                            <input type="datetime-local" class="form-control" id="sessionTime" name="sessionTime">
                                        </div>
                                    
                                        <div class="col-lg-6">
                                            <label for="sessionDuration" class="form-label">Duration (minutes)</label>
                                            <input type="number" class="form-control" id="sessionDuration" name="sessionDuration" placeholder="e.g. 45" min="1">
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Add Speaker</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                
               <!-- Edit Speaker Modal -->
                <div class="modal fade" id="editSpeakerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form action="/events/<%= event.id %>/speakers/" method="POST" enctype="multipart/form-data" id="editSpeakerForm">
                <!-- No need for _method hidden field as we're using POST directly -->
                <div class="modal-header">
                    <h5 class="modal-title">Edit Speaker</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <!-- Speaker Photo -->
                        <div class="col-lg-12 text-center">
                            <label for="editSpeakerPhoto" class="form-label">Speaker Photo</label>
                            <div class="photo-preview mb-2" id="editPhotoPreview">
                                <img id="editPhotoPreviewImg" src="" alt="Preview" class="img-thumbnail d-none" style="width: 120px; height: 120px; object-fit: cover;">
                                <div id="editPhotoPlaceholder" class="placeholder">
                                    <i class="ri-user-line" style="font-size: 2rem;"></i>
                                    <p class="mt-2 mb-0">Click to upload a new image</p>
                                    <p class="text-muted small">Recommended size: 300x300px</p>
                                </div>
                            </div>
                            <input type="file" name="speakerPhoto" id="editSpeakerPhoto" class="form-control" accept="image/*">
                        </div>
                    
                        <!-- Basic Info -->
                        <div class="col-lg-6">
                            <label for="editName" class="form-label required-label">Name</label>
                            <input type="text" class="form-control" id="editName" name="name" placeholder="Full name" required>
                        </div>
                    
                        <div class="col-lg-6">
                            <label for="editSpeakerType" class="form-label required-label">Speaker Type</label>
                            <select class="form-select" id="editSpeakerType" name="speakerType" required>
                                <option value="" disabled>Select speaker type</option>
                                <option value="keynote">Keynote Speaker</option>
                                <option value="guest">Guest Speaker</option>
                                <option value="panel">Panel Member</option>
                                <option value="regular">Regular Speaker</option>
                            </select>
                        </div>
                    
                        <div class="col-lg-6">
                            <label for="editDesignation" class="form-label">Designation/Title</label>
                            <input type="text" class="form-control" id="editDesignation" name="designation" placeholder="e.g. CTO, Professor, etc.">
                        </div>
                    
                        <div class="col-lg-6">
                            <label for="editOrganization" class="form-label">Organization/Company</label>
                            <input type="text" class="form-control" id="editOrganization" name="organization" placeholder="Company or organization name">
                        </div>
                    
                        <div class="col-lg-12">
                            <label for="editBio" class="form-label">Biography</label>
                            <textarea class="form-control" id="editBio" name="bio" rows="4" placeholder="Brief professional bio"></textarea>
                        </div>
                    
                        <!-- Session Details -->
                        <div class="col-lg-12 mt-3">
                            <hr>
                            <h5 class="section-title">
                                <i class="ri-presentation-line"></i>
                                Session Details
                            </h5>
                        </div>
                    
                        <div class="col-lg-12">
                            <label for="editSessionTopic" class="form-label">Session Topic/Title</label>
                            <input type="text" class="form-control" id="editSessionTopic" name="sessionTopic" placeholder="Topic or title of the speaker's session">
                        </div>
                    
                        <div class="col-lg-6">
                            <label for="editSessionTime" class="form-label">Session Time</label>
                            <input type="datetime-local" class="form-control" id="editSessionTime" name="sessionTime">
                        </div>
                    
                        <div class="col-lg-6">
                            <label for="editSessionDuration" class="form-label">Duration (minutes)</label>
                            <input type="number" class="form-control" id="editSessionDuration" name="sessionDuration" placeholder="e.g. 45" min="1">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
                </div>

                <!-- Delete Speaker Modal -->
                <div class="modal fade" id="deleteSpeakerModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Delete Speaker</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="text-center mb-4">
                                    <i class="ri-user-unfollow-line text-danger" style="font-size: 3rem;"></i>
                                    <h4 class="mt-2">Are you sure?</h4>
                                    <p class="text-muted" id="deleteSpeakerMessage">
                                        Do you really want to delete this speaker? This action cannot be undone.
                                    </p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                <form id="deleteSpeakerForm" method="POST">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="ri-delete-bin-line me-1"></i> Delete Speaker
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <!-- container -->
            <%- include('../partials/footer') %>
        </div>
        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->
    </div>
    <!-- END wrapper -->

    <!-- Flatpickr date-time picker JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.6.13/flatpickr.min.js"></script>
    
    <!-- Dropzone JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.js"></script>

    <%- include('../partials/footer-scripts') %>

    <script>
        // Simplified function that uses the button's data attributes
        function setDeleteSpeakerId(speakerId, speakerName) {
            // Set the correct form action URL for deletion
            document.getElementById('deleteSpeakerForm').action = `/events/delete/<%= event.id %>/speakers/${speakerId}`;
            
            // Update the confirmation message
            document.getElementById('deleteSpeakerMessage').textContent = 
                `Do you really want to delete the speaker "${speakerName}"? This action cannot be undone.`;
        }
        function editSpeaker(button) {
            // Update the form action with the speaker ID
            const speakerId = button.dataset.speakerId;
            document.getElementById('editSpeakerForm').action = `/events/<%= event.id %>/speakers/${speakerId}`;

            // Populate the form fields directly from data attributes
            document.getElementById('editName').value = button.dataset.speakerName;
            document.getElementById('editSpeakerType').value = button.dataset.speakerType;
            document.getElementById('editDesignation').value = button.dataset.speakerDesignation;
            document.getElementById('editOrganization').value = button.dataset.speakerOrganization;
            document.getElementById('editBio').value = button.dataset.speakerBio;
            document.getElementById('editSessionTopic').value = button.dataset.speakerSessionTopic;
            document.getElementById('editSessionTime').value = button.dataset.speakerSessionTime;
            document.getElementById('editSessionDuration').value = button.dataset.speakerSessionDuration;

            // Handle the photo preview
            const previewImg = document.getElementById('editPhotoPreviewImg');
            const placeholder = document.getElementById('editPhotoPlaceholder');

            if (button.dataset.speakerPhoto) {
                previewImg.src = button.dataset.speakerPhoto;
                previewImg.classList.remove('d-none');
                placeholder.style.display = 'none';
            } else {
                previewImg.classList.add('d-none');
                placeholder.style.display = 'block';
            }
        }
    </script>        
</body>
</html>
                
                