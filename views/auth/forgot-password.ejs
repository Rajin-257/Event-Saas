<div class="container py-5">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card shadow">
          <div class="card-body p-5">
            <h1 class="text-center mb-4">Forgot Password</h1>
            <p class="text-center mb-4">Enter your email address and we'll send you an OTP to reset your password.</p>
            
            <form action="/auth/forgot-password" method="POST">
              <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Send OTP</button>
              </div>
            </form>
            
            <hr class="my-4">
            
            <div class="text-center">
              <p class="mb-0">Remember your password?</p>
              <a href="/auth/login" class="btn btn-outline-primary mt-2">Back to Login</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>