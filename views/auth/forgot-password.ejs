<%- include('../partials/header') %>

<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card shadow-sm">
      <div class="card-body p-5">
        <h2 class="text-center mb-4">Forgot Password</h2>
        
        <p class="text-center mb-4">Enter your email address and we'll send you an OTP to reset your password.</p>
        
        <form action="/auth/forgot-password" method="POST">
          <div class="mb-4">
            <label for="email" class="form-label">Email</label>
            <input 
              type="email" 
              class="form-control" 
              id="email" 
              name="email" 
              placeholder="Enter your email"
              required
              value="<%= formData && formData.email ? formData.email : '' %>"
            >
          </div>
          
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Send Reset OTP</button>
          </div>
        </form>
        
        <div class="mt-4 text-center">
          <p>Remember your password? <a href="/auth/login" class="text-decoration-none">Back to Login</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>


