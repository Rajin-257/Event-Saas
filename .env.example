# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=event_management

# Session
SESSION_SECRET=your_session_secret_key_here

# Mailtrap Configuration (for development email testing)
MAILTRAP_HOST=smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USER=your_mailtrap_username
MAILTRAP_PASS=your_mailtrap_password
EMAIL_FROM=Event Management <noreply@eventmanagement.com>

# Production Email Configuration (when NODE_ENV=production)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# WhatsApp Business API Configuration
WHATSAPP_API_URL=https://api.whatsappapi.provider.com/v1
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
